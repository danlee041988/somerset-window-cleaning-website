# Somerset Window Cleaning Environment Variables
# Copy this file to .env and fill in your actual values

# ===================================
# PUBLIC VARIABLES (Client-Safe)
# ===================================

# Site Configuration
PUBLIC_SITE_URL=https://www.somersetwindowcleaning.co.uk
PUBLIC_APP_NAME="Somerset Window Cleaning"

# Supabase Public Configuration
PUBLIC_SUPABASE_URL=your-supabase-project-url
PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Analytics (optional)
PUBLIC_GA_MEASUREMENT_ID=your-google-analytics-id
PUBLIC_SPLITBEE_TOKEN=your-splitbee-token

# Google Site Verification
PUBLIC_GOOGLE_SITE_VERIFICATION=your-google-verification-code
PUBLIC_BING_SITE_VERIFICATION=your-bing-verification-code

# ===================================
# SERVER-ONLY VARIABLES (Keep Secret!)
# ===================================

# Supabase Service Key (for server-side operations)
SUPABASE_SERVICE_KEY=your-supabase-service-role-key
SUPABASE_URL=your-supabase-project-url

# Email Configuration (Server-side)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
CONTACT_EMAIL=info@somersetwindowcleaning.co.uk

# EmailJS Configuration (Server-side only)
EMAILJS_SERVICE_ID=your-emailjs-service-id
EMAILJS_TEMPLATE_ID=your-emailjs-template-id
EMAILJS_PRIVATE_KEY=your-emailjs-private-key

# API Keys (Server-side only)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Security Secrets
CSRF_SECRET=generate-a-random-32-character-string
SESSION_SECRET=generate-another-random-32-character-string
JWT_SECRET=generate-a-secure-jwt-secret

# Rate Limiting
RATE_LIMIT_SECRET=generate-rate-limit-secret

# Development
DEV_PORT=4321
NODE_ENV=development