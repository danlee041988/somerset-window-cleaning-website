{
  "name": "@swc/frontend",
  "version": "1.0.0",
  "description": "Somerset Window Cleaning Frontend - Astro 5.0 and Tailwind CSS",
  "type": "module",
  "engines": {
    "node": "^18.17.1 || ^20.3.0 || >= 21.0.0"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "optimize-images": "node src/scripts/optimize-images.js",
    "analyze-images": "node src/scripts/analyze-images.js",
    "analyze-css": "node src/scripts/analyze-css.js",
    "download-fonts": "node src/scripts/download-fonts.js",
    "check": "npm run check:astro && npm run check:eslint && npm run check:prettier",
    "check:astro": "astro check",
    "check:eslint": "eslint .",
    "check:prettier": "prettier --check .",
    "fix": "npm run fix:eslint && npm run fix:prettier",
    "fix:eslint": "eslint --fix .",
    "fix:prettier": "prettier -w .",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:links": "playwright test tests/specs/link-validation.spec.ts",
    "test:performance": "playwright test tests/specs/performance.spec.ts",
    "test:visual": "playwright test tests/specs/visual-regression.spec.ts",
    "test:mobile": "playwright test --project=\"Mobile Chrome\"",
    "test:cross-browser": "playwright test --project=chromium --project=firefox --project=webkit",
    "lighthouse": "lhci autorun",
    "lighthouse:desktop": "lhci autorun --config=lighthouserc.js",
    "lighthouse:mobile": "lighthouse --preset=mobile --chrome-flags=\"--no-sandbox\" --output=html --output-path=./lighthouse-mobile-report.html http://localhost:4321",
    "pa11y": "node pa11y-test.js",
    "accessibility": "npm run pa11y",
    "optimize:images": "node scripts/optimize-images.js",
    "seo:audit": "npm run lighthouse && npm run pa11y",
    "performance:audit": "npm run lighthouse:desktop && npm run lighthouse:mobile",
    "quality:check": "npm run check && npm run seo:audit",
    "dev:remote": "concurrently -k -n dev,tunnel -c auto,auto \"astro dev\" \"node scripts/tunnel.js\""
  },
  "dependencies": {
    "@astrojs/node": "^9.4.3",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.2",
    "@astrojs/vercel": "^8.2.7",
    "@astrolib/analytics": "^0.6.1",
    "@astrolib/seo": "^1.0.0-beta.8",
    "@emailjs/browser": "^3.11.0",
    "@fontsource-variable/inter": "^5.2.6",
    "@types/nodemailer": "^7.0.1",
    "astro": "^5.12.9",
    "astro-embed": "^0.9.0",
    "astro-icon": "^1.1.5",
    "limax": "4.1.0",
    "lodash.merge": "^4.6.2",
    "nodemailer": "^7.0.6",
    "unpic": "^4.1.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.3.3",
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/tailwind": "^5.1.5",
    "@eslint/js": "^9.33.0",
    "@iconify-json/flat-color-icons": "^1.2.1",
    "@iconify-json/tabler": "^1.2.20",
    "@lhci/cli": "^0.14.0",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/typography": "^0.5.16",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash.merge": "^4.6.9",
    "@types/mdx": "^2.0.13",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "astro-compress": "2.3.8",
    "astro-eslint-parser": "^1.2.2",
    "cli-progress": "^3.12.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.33.0",
    "eslint-plugin-astro": "^1.3.1",
    "globals": "^16.3.0",
    "js-yaml": "^4.1.0",
    "lighthouse": "^12.8.1",
    "localtunnel": "^2.0.2",
    "mdast-util-to-string": "^4.0.0",
    "nodemon": "^3.1.10",
    "pa11y": "^8.0.0",
    "playwright": "^1.54.2",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "reading-time": "^1.5.0",
    "sharp": "^0.34.3",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.39.0",
    "unist-util-visit": "^5.0.0",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
