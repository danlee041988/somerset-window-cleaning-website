---
import { Icon } from 'astro-icon/components';
import { SITE } from 'astrowind:config';
import { getHomePermalink } from '~/utils/permalinks';
import Logo from '~/components/Logo.astro';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links: Array<Links>;
  secondaryLinks: Array<Link>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string;
}

const { socialLinks = [], secondaryLinks = [], links = [], footNote = '', theme = 'light' } = Astro.props;
---

<footer class="relative border-t border-gray-200 not-prose text-white footer-force-white bg-neutral-900">
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div
    class="relative max-w-7xl mx-auto px-4 sm:px-6 text-white intersect-once intersect-quarter intersect-no-queue motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
  >
    <!-- Contact Details Section -->
    <div class="py-8 md:py-12 border-b border-gray-200 dark:border-slate-700">
      <div class="text-center">
        <h3 class="text-2xl font-bold mb-6">Contact Somerset Window Cleaning</h3>
        
        <!-- Primary Contact Methods -->
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 sm:gap-6 mb-8">
          <!-- Call button with red outline -->
          <a
            href="tel:01458860339"
            class="inline-flex items-center gap-3 border-2 border-primary text-white font-semibold px-6 py-3 rounded-lg transition-all duration-200 hover:bg-primary/15 no-underline"
            aria-label="Call Somerset Window Cleaning on 01458 860339"
            style="color:#fff !important"
          >
            <Icon name="tabler:phone" class="w-6 h-6 text-primary" />
            <div class="text-left">
              <p class="text-sm uppercase tracking-wide">Call Us</p>
              <p class="text-lg font-bold">01458 860339</p>
            </div>
          </a>

          <!-- WhatsApp Button -->
          <a 
            href="https://wa.me/447415526331?text=Hi%20Somerset%20Window%20Cleaning%2C%20I%27d%20like%20a%20quote" 
            target="_blank" 
            rel="noopener noreferrer"
            class="inline-flex items-center gap-3 bg-green-500 hover:bg-green-600 text-white font-semibold px-6 py-3 rounded-lg transition-all duration-200 transform hover:scale-105 no-underline shadow-lg"
          >
            <Icon name="tabler:brand-whatsapp" class="w-6 h-6" />
            <div class="text-left">
              <p class="text-sm opacity-90">Message us on</p>
              <p class="text-lg font-bold">WhatsApp</p>
            </div>
          </a>

          <!-- Contact form button -->
          <a
            href="/book-now"
            class="inline-flex items-center gap-3 border-2 border-white text-white font-semibold px-6 py-3 rounded-lg transition-all duration-200 hover:bg-white/10 no-underline"
            aria-label="Request free quote"
            style="color:#fff !important"
          >
            <Icon name="tabler:file-text" class="w-6 h-6" />
            <div class="text-left">
              <p class="text-sm uppercase tracking-wide">Request</p>
              <p class="text-lg font-bold">Free Quote</p>
            </div>
          </a>
        </div>

      </div>
    </div>

    <div class="grid grid-cols-12 gap-4 gap-y-8 sm:gap-8 py-8 md:py-12">
      <div class="col-span-12 lg:col-span-4">
        <div class="mb-4">
          <a href={getHomePermalink()} class="inline-block" aria-label="Somerset Window Cleaning - Home">
            <Logo />
          </a>
        </div>
        <div class="text-sm text-white flex gap-1">
          {
            secondaryLinks.map(({ text, href }, index) => (
              <>
                {index !== 0 ? ' Â· ' : ''}
                <a
                  class="text-white hover:text-white no-underline hover:underline transition duration-150 ease-in-out"
                  href={href}
                  style="color:#fff !important"
                  set:html={text}
                />
              </>
            ))
          }
        </div>
      </div>
      {
        links.map(({ title, links }) => (
          <div class="col-span-6 md:col-span-3 lg:col-span-2">
            <div class="text-white font-medium mb-2">{title}</div>
            {links && Array.isArray(links) && links.length > 0 && (
              <ul class="text-sm">
                {links.map(({ text, href, ariaLabel }) => (
                  <li class="mb-2">
                    <a
                      class="text-white hover:text-white transition duration-150 ease-in-out no-underline hover:underline"
                      href={href}
                      aria-label={ariaLabel}
                      style="color:#fff !important"
                    >
                      <Fragment set:html={text} />
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </div>
        ))
      }
    </div>
    <div class="md:flex md:items-center md:justify-between py-6 md:py-8">
      {
        socialLinks?.length ? (
          <ul class="flex mb-4 md:order-1 -ml-2 md:ml-4 md:mb-0 rtl:ml-0 rtl:-mr-2 rtl:md:ml-0 rtl:md:mr-4 text-white">
            {socialLinks.map(({ ariaLabel, href, text, icon }) => (
              <li>
                <a
                  class:list=[
                    'hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center',
                    'text-white'
                  ]
                  aria-label={ariaLabel}
                  href={href}
                  style="color:#fff !important"
                >
                  {icon && <Icon name={icon} class="w-5 h-5" />}
                  <Fragment set:html={text} />
                </a>
              </li>
            ))}
          </ul>
        ) : (
          ''
        )
      }

      <div class="text-sm mr-4 text-white">
        <Fragment set:html={footNote} />
      </div>
    </div>
  </div>
</footer>
