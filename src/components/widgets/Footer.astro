---
import { Icon } from 'astro-icon/components';
import { SITE } from 'astrowind:config';
import { getHomePermalink } from '~/utils/permalinks';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links: Array<Links>;
  secondaryLinks: Array<Link>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string;
}

const { socialLinks = [], secondaryLinks = [], links = [], footNote = '', theme = 'light' } = Astro.props;
---

<footer class:list={[{ dark: theme === 'dark' }, 'relative border-t border-gray-200 dark:border-slate-800 not-prose text-slate-100']}>
  <div class="dark:bg-dark absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div
    class="relative max-w-7xl mx-auto px-4 sm:px-6 text-slate-100 intersect-once intersect-quarter intersect-no-queue motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
  >
    <!-- Contact Details Section -->
    <div class="py-8 md:py-12 border-b border-gray-200 dark:border-slate-700">
      <div class="text-center">
        <h3 class="text-2xl font-bold mb-6">Contact Somerset Window Cleaning</h3>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-6">
          <!-- Landline -->
          <div class="flex items-center gap-3">
            <Icon name="tabler:phone" class="w-6 h-6 text-primary" />
            <div>
              <p class="text-sm uppercase tracking-wide text-slate-200">Call Us</p>
              <a href="tel:01458860339" class="text-xl font-semibold text-slate-100 no-underline hover:text-primary transition-colors">
                01458 860339
              </a>
            </div>
          </div>
          
          <!-- WhatsApp Button -->
          <a 
            href="https://wa.me/447458860339" 
            target="_blank" 
            rel="noopener noreferrer"
            class="inline-flex items-center gap-3 bg-green-500 hover:bg-green-600 text-white font-semibold px-6 py-3 rounded-lg transition-all duration-200 transform hover:scale-105 no-underline shadow-lg"
          >
            <Icon name="tabler:brand-whatsapp" class="w-6 h-6" />
            <div class="text-left">
              <p class="text-sm opacity-90">Message us on</p>
              <p class="text-lg font-bold">WhatsApp</p>
            </div>
          </a>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-12 gap-4 gap-y-8 sm:gap-8 py-8 md:py-12">
      <div class="col-span-12 lg:col-span-4">
        <div class="mb-2">
          <a class="inline-block font-bold text-xl no-underline text-slate-100" href={getHomePermalink()}>{SITE?.name}</a>
        </div>
        <div class="text-sm text-slate-200 flex gap-1">
          {
            secondaryLinks.map(({ text, href }, index) => (
              <>
                {index !== 0 ? ' Â· ' : ''}
                <a
                  class="text-slate-200 hover:text-white no-underline hover:underline transition duration-150 ease-in-out"
                  href={href}
                  set:html={text}
                />
              </>
            ))
          }
        </div>
      </div>
      {
        links.map(({ title, links }) => (
          <div class="col-span-6 md:col-span-3 lg:col-span-2">
            <div class="text-slate-100 font-medium mb-2">{title}</div>
            {links && Array.isArray(links) && links.length > 0 && (
              <ul class="text-sm">
                {links.map(({ text, href, ariaLabel }) => (
                  <li class="mb-2">
                    <a
                      class="text-slate-200 hover:text-white transition duration-150 ease-in-out no-underline hover:underline"
                      href={href}
                      aria-label={ariaLabel}
                    >
                      <Fragment set:html={text} />
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </div>
        ))
      }
    </div>
    <div class="md:flex md:items-center md:justify-between py-6 md:py-8">
      {
        socialLinks?.length ? (
          <ul class="flex mb-4 md:order-1 -ml-2 md:ml-4 md:mb-0 rtl:ml-0 rtl:-mr-2 rtl:md:ml-0 rtl:md:mr-4 text-slate-100">
            {socialLinks.map(({ ariaLabel, href, text, icon }) => (
              <li>
                <a
                  class:list={[
                    'hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 rounded-lg text-sm p-2.5 inline-flex items-center',
                    (icon === 'tabler:brand-whatsapp' || (ariaLabel && ariaLabel.toLowerCase() === 'whatsapp'))
                      ? 'text-green-500 hover:bg-green-600/10'
                      : 'text-slate-200'
                  ]}
                  aria-label={ariaLabel}
                  href={href}
                >
                  {icon && <Icon name={icon} class="w-5 h-5" />}
                  <Fragment set:html={text} />
                </a>
              </li>
            ))}
          </ul>
        ) : (
          ''
        )
      }

      <div class="text-sm mr-4 text-slate-200">
        <Fragment set:html={footNote} />
      </div>
    </div>
  </div>
</footer>
