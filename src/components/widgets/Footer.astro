---
import { Icon } from 'astro-icon/components';
import { SITE } from 'astrowind:config';
import { getHomePermalink } from '~/utils/permalinks';
import Logo from '~/components/Logo.astro';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links: Array<Links>;
  secondaryLinks: Array<Link>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string;
}

const { socialLinks = [], secondaryLinks = [], links = [], footNote = '', theme = 'light' } = Astro.props;
---

<footer class="relative border-t border-gray-800 not-prose text-white footer-force-white bg-black">
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div
    class="relative max-w-7xl mx-auto px-4 sm:px-6 text-white bg-black intersect-once intersect-quarter intersect-no-queue motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
  >
    <!-- Contact Details Section -->
    <div class="py-8 md:py-12 border-b border-gray-800 bg-black">
      <div class="text-center bg-black">
        <h3 class="text-2xl font-bold mb-6">Contact Somerset Window Cleaning</h3>
        
        <!-- Enhanced Contact Methods Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-12">
          <!-- Call button with enhanced styling -->
          <a
            href="tel:01458860339"
            class="group inline-flex items-center gap-4 bg-gradient-to-br from-red-600/10 to-red-700/5 border-2 border-red-600 text-white font-semibold p-6 rounded-xl transition-all duration-300 hover:bg-red-600/20 hover:border-red-400 hover:scale-105 hover:shadow-2xl hover:shadow-red-500/20 no-underline"
            aria-label="Call Somerset Window Cleaning on 01458 860339"
            style="color:#fff !important"
          >
            <div class="w-12 h-12 bg-red-600 rounded-lg flex items-center justify-center group-hover:bg-red-500 transition-colors duration-300">
              <Icon name="tabler:phone" class="w-6 h-6 text-white" />
            </div>
            <div class="text-left flex-grow">
              <p class="text-xs uppercase tracking-wider text-red-400 font-medium">CALL US</p>
              <p class="text-lg font-bold group-hover:text-red-300 transition-colors">01458 860339</p>
            </div>
          </a>

          <!-- WhatsApp Button with enhanced styling -->
          <a 
            href="https://wa.me/447415526331?text=Hi%20Somerset%20Window%20Cleaning%2C%20I%27d%20like%20a%20quote" 
            target="_blank" 
            rel="noopener noreferrer"
            class="group inline-flex items-center gap-4 bg-gradient-to-br from-green-600/10 to-green-700/5 border-2 border-green-600 text-white font-semibold p-6 rounded-xl transition-all duration-300 hover:bg-green-600/20 hover:border-green-400 hover:scale-105 hover:shadow-2xl hover:shadow-green-500/20 no-underline"
            aria-label="Message Somerset Window Cleaning on WhatsApp"
          >
            <div class="w-12 h-12 bg-green-600 rounded-lg flex items-center justify-center group-hover:bg-green-500 transition-colors duration-300">
              <Icon name="tabler:brand-whatsapp" class="w-6 h-6 text-white" />
            </div>
            <div class="text-left flex-grow">
              <p class="text-xs uppercase tracking-wider text-green-400 font-medium">MESSAGE US</p>
              <p class="text-lg font-bold group-hover:text-green-300 transition-colors">WhatsApp</p>
            </div>
          </a>

          <!-- Email contact with enhanced styling -->
          <a
            href="mailto:info@somersetwindowcleaning.co.uk"
            class="group inline-flex items-center gap-4 bg-gradient-to-br from-gray-600/10 to-gray-700/5 border-2 border-gray-600 text-white font-semibold p-6 rounded-xl transition-all duration-300 hover:bg-gray-600/20 hover:border-gray-400 hover:scale-105 hover:shadow-2xl hover:shadow-gray-500/20 no-underline"
            aria-label="Email Somerset Window Cleaning"
            style="color:#fff !important"
          >
            <div class="w-12 h-12 bg-gray-600 rounded-lg flex items-center justify-center group-hover:bg-gray-500 transition-colors duration-300">
              <Icon name="tabler:mail" class="w-6 h-6 text-white" />
            </div>
            <div class="text-left flex-grow">
              <p class="text-xs uppercase tracking-wider text-gray-400 font-medium">EMAIL US</p>
              <p class="text-sm font-bold group-hover:text-gray-300 transition-colors leading-tight">info@somersetwindow<br />cleaning.co.uk</p>
            </div>
          </a>
        </div>

        <!-- Additional Contact Info with Icons -->
        <div class="text-center space-y-4">
          <!-- Address with enhanced styling -->
          <div class="inline-flex items-center gap-3 text-gray-300 hover:text-white transition-colors duration-200">
            <Icon name="tabler:map-pin" class="w-5 h-5 text-red-500 flex-shrink-0" />
            <div class="text-left">
              <p class="font-medium">13 Rockhaven Business Centre</p>
              <p class="text-sm">Gravenchon Way, Street, Somerset BA16 0HW</p>
            </div>
          </div>
        </div>

      </div>
    </div>

    <div class="grid grid-cols-12 gap-6 gap-y-10 sm:gap-8 py-12 md:py-16 bg-black">
      <div class="col-span-12 lg:col-span-4">
        <div class="mb-6">
          <a href={getHomePermalink()} class="inline-block hover:scale-105 transition-transform duration-300" aria-label="Somerset Window Cleaning - Home">
            <Logo />
          </a>
        </div>
        <div class="text-sm text-white flex flex-wrap gap-1 leading-relaxed">
          {
            secondaryLinks.map(({ text, href }, index) => (
              <>
                {index !== 0 ? <span class="text-gray-500 mx-1">Â·</span> : ''}
                <a
                  class="text-white hover:text-red-400 no-underline hover:underline transition-all duration-200 hover:scale-105"
                  href={href}
                  style="color:#fff !important"
                  set:html={text}
                />
              </>
            ))
          }
        </div>
      </div>
      {
        links.map(({ title, links }, columnIndex) => (
          <div class="col-span-6 md:col-span-3 lg:col-span-2 relative">
            {/* Subtle left border accent */}
            <div class="absolute left-0 top-0 bottom-0 w-px bg-gradient-to-b from-red-600/50 via-red-600/20 to-transparent"></div>
            <div class="pl-4">
              <div class="text-white font-semibold mb-4 text-sm uppercase tracking-wider">{title}</div>
              {links && Array.isArray(links) && links.length > 0 && (
                <ul class="text-sm space-y-3">
                  {links.map(({ text, href, ariaLabel }, linkIndex) => (
                    <li class="group">
                      <a
                        class="text-gray-300 hover:text-white transition-all duration-200 no-underline flex items-center group-hover:translate-x-1"
                        href={href}
                        aria-label={ariaLabel}
                        style="color:#d1d5db !important"
                      >
                        <span class="w-0 group-hover:w-2 h-px bg-red-500 transition-all duration-200 mr-0 group-hover:mr-2"></span>
                        <Fragment set:html={text} />
                        {linkIndex === links.length - 1 && text.includes('View All') && (
                          <Icon name="tabler:arrow-right" class="w-4 h-4 ml-2 transition-transform duration-200 group-hover:translate-x-1" />
                        )}
                      </a>
                    </li>
                  ))}
                </ul>
              )}
            </div>
          </div>
        ))
      }
    </div>
    <!-- Enhanced Footer Bottom Section -->
    <div class="border-t border-gray-800 pt-8 pb-6 bg-black">
      <div class="md:flex md:items-center md:justify-between">
        {
          socialLinks?.length ? (
            <div class="mb-6 md:mb-0 md:order-2">
              <p class="text-sm font-medium text-gray-400 mb-3 text-center md:text-left">Follow Us</p>
              <ul class="flex justify-center md:justify-start gap-2">
                {socialLinks.map(({ ariaLabel, href, text, icon }) => (
                  <li>
                    <a
                      class="group bg-gray-800 hover:bg-red-600 focus:outline-none focus:ring-4 focus:ring-red-500/50 rounded-xl p-4 inline-flex items-center transition-all duration-300 hover:scale-110 hover:shadow-lg hover:shadow-red-500/25 text-white"
                      aria-label={ariaLabel}
                      href={href}
                      style="color:#fff !important"
                    >
                      {icon && <Icon name={icon} class="w-6 h-6 text-gray-300 group-hover:text-white transition-colors" />}
                      <Fragment set:html={text} />
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ) : (
            ''
          )
        }

        <div class="text-sm text-gray-400 text-center md:text-left md:order-1">
          <Fragment set:html={footNote} />
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Enhanced footer hover effects */
  .footer-link-underline {
    position: relative;
    overflow: hidden;
  }
  
  .footer-link-underline::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: -100%;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, transparent, #ef4444, transparent);
    transition: left 0.5s;
  }
  
  .footer-link-underline:hover::after {
    left: 100%;
  }
  
  /* Smooth gradient animations */
  @keyframes gradientShift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }
  
  .animate-gradient {
    background-size: 200% 200%;
    animation: gradientShift 3s ease infinite;
  }
  
  /* Enhanced focus styles for accessibility */
  .footer-focus:focus-visible {
    outline: 2px solid #ef4444;
    outline-offset: 2px;
    border-radius: 0.375rem;
  }
  
  /* Hover animations for service links */
  .service-link {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .service-link:hover {
    padding-left: 0.75rem;
  }
  
  /* Icon pulse effect */
  @keyframes pulse-red {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.4);
    }
    50% {
      box-shadow: 0 0 0 8px rgba(239, 68, 68, 0);
    }
  }
  
  .icon-pulse:hover {
    animation: pulse-red 1.5s infinite;
  }
</style>
