---
import { Icon } from 'astro-icon/components';
import { SITE } from 'astrowind:config';
import { getHomePermalink } from '~/utils/permalinks';
import Logo from '~/components/Logo.astro';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface Links {
  title?: string;
  links: Array<Link>;
}

export interface Props {
  links: Array<Links>;
  secondaryLinks: Array<Link>;
  socialLinks: Array<Link>;
  footNote?: string;
  theme?: string;
}

const { socialLinks = [], secondaryLinks = [], links = [], footNote = '', theme = 'light' } = Astro.props;
---

<footer class="relative border-t border-gray-800 not-prose text-white footer-force-white bg-black">
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div
    class="relative max-w-7xl mx-auto px-4 sm:px-6 text-white bg-black"
  >

    <div class="grid grid-cols-12 gap-4 py-6 bg-black">
      <div class="col-span-12 lg:col-span-3">
        <div class="mb-3">
          <a href={getHomePermalink()} class="inline-block" aria-label="Somerset Window Cleaning - Home">
            <Logo />
          </a>
        </div>
      </div>
      {
        links.map(({ title, links }, columnIndex) => (
          <div class="col-span-6 md:col-span-3 lg:col-span-2 relative">
            {/* Subtle left border accent */}
            <div class="absolute left-0 top-0 bottom-0 w-px bg-gradient-to-b from-red-600/50 via-red-600/20 to-transparent"></div>
            <div class="pl-4">
              <div class="text-white font-semibold mb-2 text-xs uppercase tracking-wider">{title}</div>
              {links && Array.isArray(links) && links.length > 0 && (
                <ul class="text-xs space-y-1">
                  {links.map(({ text, href, ariaLabel }, linkIndex) => (
                    <li class="group">
                      <a
                        class="text-gray-300 hover:text-white transition-all duration-200 no-underline flex items-center group-hover:translate-x-1"
                        href={href}
                        aria-label={ariaLabel}
                        style="color:#d1d5db !important"
                      >
                        <span class="w-0 group-hover:w-2 h-px bg-red-500 transition-all duration-200 mr-0 group-hover:mr-2"></span>
                        <Fragment set:html={text} />
                        {linkIndex === links.length - 1 && text.includes('View All') && (
                          <Icon name="tabler:arrow-right" class="w-4 h-4 ml-2 transition-transform duration-200 group-hover:translate-x-1" />
                        )}
                      </a>
                    </li>
                  ))}
                </ul>
              )}
            </div>
          </div>
        ))
      }
    </div>
    <!-- Compact Footer Bottom Section -->
    <div class="border-t border-gray-800 py-3 bg-black">
      <div class="flex flex-col md:flex-row items-center justify-between gap-3">
        <div class="text-xs text-gray-400 text-center md:text-left">
          <Fragment set:html={footNote} />
        </div>
        {
          socialLinks?.length ? (
            <ul class="flex gap-3">
              {socialLinks.map(({ ariaLabel, href, icon }) => (
                <li>
                  <a
                    class="text-gray-400 hover:text-red-500 transition-colors duration-200"
                    aria-label={ariaLabel}
                    href={href}
                  >
                    {icon && <Icon name={icon} class="w-5 h-5" />}
                  </a>
                </li>
              ))}
            </ul>
          ) : ''
        }
      </div>
    </div>
    
    <!-- Terms & Conditions and Privacy Policy at bottom -->
    {
      secondaryLinks?.length ? (
        <div class="border-t border-gray-800 py-2 bg-black text-center">
          <div class="text-xs text-gray-400">
            {
              secondaryLinks.map(({ text, href }, index) => (
                <>
                  {index !== 0 ? <span class="text-gray-500 mx-2">Â·</span> : ''}
                  <a
                    class="text-gray-400 hover:text-white no-underline hover:underline transition-all duration-200"
                    href={href}
                    set:html={text}
                  />
                </>
              ))
            }
          </div>
        </div>
      ) : ''
    }
  </div>
</footer>

<style>
  /* Enhanced footer hover effects */
  .footer-link-underline {
    position: relative;
    overflow: hidden;
  }
  
  .footer-link-underline::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: -100%;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, transparent, #ef4444, transparent);
    transition: left 0.5s;
  }
  
  .footer-link-underline:hover::after {
    left: 100%;
  }
  
  /* Smooth gradient animations */
  @keyframes gradientShift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }
  
  .animate-gradient {
    background-size: 200% 200%;
    animation: gradientShift 3s ease infinite;
  }
  
  /* Enhanced focus styles for accessibility */
  .footer-focus:focus-visible {
    outline: 2px solid #ef4444;
    outline-offset: 2px;
    border-radius: 0.375rem;
  }
  
  /* Hover animations for service links */
  .service-link {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .service-link:hover {
    padding-left: 0.75rem;
  }
  
  /* Icon pulse effect */
  @keyframes pulse-red {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.4);
    }
    50% {
      box-shadow: 0 0 0 8px rgba(239, 68, 68, 0);
    }
  }
  
  .icon-pulse:hover {
    animation: pulse-red 1.5s infinite;
  }
</style>
