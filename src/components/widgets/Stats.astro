---
import type { Stats as Props } from '~/types';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import { Icon } from 'astro-icon/components';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  stats = [],

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />
  <div class="bg-black py-12 px-4">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        {
          stats &&
            stats.map(({ amount, title, description }, index) => (
              <div class="text-white group transition-transform duration-300 hover:scale-105 intersect-once motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade" style={`animation-delay: ${index * 100}ms`}>
                {amount && (
                  <div class="text-4xl md:text-5xl lg:text-6xl font-bold mb-2 tracking-tight">
                    {amount}
                    {title === 'GOOGLE RATING' && <span class="text-yellow-400">â˜…</span>}
                  </div>
                )}
                {title && (
                  <div class="text-sm md:text-base font-medium uppercase tracking-wider text-gray-300 group-hover:text-white transition-colors">
                    {title}
                  </div>
                )}
                {description && (
                  <div class="text-xs text-gray-500 mt-1">
                    {description}
                  </div>
                )}
              </div>
            ))
        }
      </div>
    </div>
  </div>
</WidgetWrapper>
