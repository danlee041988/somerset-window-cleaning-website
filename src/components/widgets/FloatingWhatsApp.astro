---
/**
 * Floating WhatsApp Button Component
 * 
 * A fixed-position WhatsApp button with pulse animation that appears
 * on all pages. Positioned above the mobile CTA bar on mobile devices.
 * 
 * Features:
 * - Accessible button with proper ARIA labels
 * - Smooth hover effects and pulse animation
 * - Respects prefers-reduced-motion
 * - Pre-filled message for instant quotes
 */

interface Props {
  phoneNumber?: string;
  message?: string;
  className?: string;
}

const {
  phoneNumber = '447415526331',
  message = 'Hi Somerset Window Cleaning, please can I get a quote for window cleaning',
  className = '',
} = Astro.props;

const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`;
---

