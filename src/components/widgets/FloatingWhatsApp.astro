      Get instant quote on WhatsApp
    </span>
  </a>
</div>

<style>
  /* Custom pulse animation that's subtle and attention-grabbing */
  @keyframes pulse-subtle {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.9;
      transform: scale(1.05);
    }
  }

  /* Apply animation only if motion is not reduced */
  @media (prefers-reduced-motion: no-preference) {
    .animate-pulse-subtle {
      animation: pulse-subtle 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }

    /* Pause animation on hover */
    .animate-pulse-subtle:hover {
      animation-play-state: paused;
    }
  }

  /* Adjust position on mobile to account for CTA bar */
  @media (max-width: 767px) {
    #floating-whatsapp {
      bottom: 75px !important;
      right: 16px !important;
    }
    
    /* Smaller button on mobile */
    #floating-whatsapp a {
      width: 48px;
      height: 48px;
    }
    
    #floating-whatsapp svg {
      width: 24px;
      height: 24px;
    }
  }

  /* Ensure button stays above other content */
  #floating-whatsapp {
    /* Position above most content but below modals/dropdowns */
    z-index: 40;
  }

  /* Improve touch target on mobile */
  @media (hover: none) and (pointer: coarse) {
    #floating-whatsapp a {
      /* Ensure minimum 44x44px touch target */
      min-width: 44px;
      min-height: 44px;
    }
  }
</style>

<script>
  /**
   * Hide WhatsApp button when mobile CTA is fully visible
   * to prevent overlapping UI elements
   */
  class FloatingWhatsApp {
    constructor() {
      this.button = document.getElementById('floating-whatsapp');
      this.mobileCTA = document.getElementById('sticky-mobile-cta');
      
      if (this.button && this.mobileCTA) {
        this.init();
      }
    }
    
    init() {
      // Create a MutationObserver to watch for changes to the mobile CTA
      const observer = new MutationObserver(() => {
        this.adjustPosition();
      });
      
      // Observe style changes on mobile CTA
      observer.observe(this.mobileCTA, {
        attributes: true,
        attributeFilter: ['style', 'class']
      });
      
      // Initial adjustment
      this.adjustPosition();
      
      // Also adjust on scroll
      let ticking = false;
      window.addEventListener('scroll', () => {
        if (!ticking) {
          requestAnimationFrame(() => {
            this.adjustPosition();
            ticking = false;
          });
          ticking = true;
        }
      }, { passive: true });
    }
    
    adjustPosition() {
      // Only adjust on mobile
      if (window.innerWidth >= 768) return;
      
      // Check if mobile CTA is visible
      const ctaTransform = this.mobileCTA.style.transform;
      const isCtaVisible = !ctaTransform || ctaTransform === 'translateY(0)' || ctaTransform === 'translateY(0px)';
      
      if (isCtaVisible) {
        // Move WhatsApp button higher when CTA is visible
        this.button.style.bottom = '120px';
      } else {
        // Default position when CTA is hidden
        this.button.style.bottom = '75px';
      }
    }
  }
  
  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => new FloatingWhatsApp());
  } else {
    new FloatingWhatsApp();
  }
  
  // Re-initialize after Astro page transitions
  document.addEventListener('astro:after-swap', () => new FloatingWhatsApp());
</script>