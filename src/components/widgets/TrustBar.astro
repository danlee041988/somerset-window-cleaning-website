---
import { siteConfig } from '~/config/site';

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class={`relative intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade ${className}`}>
  <div class="absolute inset-0 bg-black"></div>
  <div class="relative py-8 px-4">
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 text-sm">
      <!-- Fully Insured -->
      <div class="group rounded-2xl border-2 border-green-400/30 bg-gradient-to-br from-black/60 to-green-900/20 hover:from-green-900/30 hover:to-black/60 hover:border-green-400/60 transition-all duration-300 p-4 text-center hover:scale-105 hover:shadow-lg hover:shadow-green-400/20">
        <div class="text-white font-bold text-lg mb-2 group-hover:text-green-100 transition-colors duration-300">
          <span class="text-green-400 text-xl">✓</span> Fully Insured
        </div>
        <div class="text-sm text-green-100/90 font-medium">£5M public liability</div>
      </div>

      <!-- Easy Payment -->
      <div class="group rounded-2xl border-2 border-blue-400/30 bg-gradient-to-br from-black/60 to-blue-900/20 hover:from-blue-900/30 hover:to-black/60 hover:border-blue-400/60 transition-all duration-300 p-4 text-center hover:scale-105 hover:shadow-lg hover:shadow-blue-400/20">
        <div class="text-white font-bold text-lg mb-2 group-hover:text-blue-100 transition-colors duration-300">
          <span class="text-blue-400 text-xl">💳</span> Easy Payment
        </div>
        <div class="text-sm text-blue-100/90 font-medium">Card & Direct Debit</div>
      </div>

      <!-- Reviews -->
      <a
        href={siteConfig.social.google}
        target="_blank"
        class="group rounded-2xl border-2 border-yellow-400/30 bg-gradient-to-br from-black/60 to-yellow-900/20 hover:from-yellow-900/30 hover:to-black/60 hover:border-yellow-400/60 transition-all duration-300 p-4 text-center hover:scale-105 hover:shadow-lg hover:shadow-yellow-400/20 cursor-pointer"
      >
        <div class="text-white font-bold text-lg mb-2 group-hover:text-yellow-100 transition-colors duration-300 inline-flex items-center justify-center gap-2">
          <svg class="w-5 h-5" viewBox="0 0 20 20" aria-hidden="true"><path fill="#FFD700" d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
          <span>4.9/5 Reviews</span>
        </div>
        <div class="text-sm text-yellow-100/90 font-medium">Google verified</div>
      </a>

      <!-- Guarantee -->
      <div class="group rounded-2xl border-2 border-purple-400/30 bg-gradient-to-br from-black/60 to-purple-900/20 hover:from-purple-900/30 hover:to-black/60 hover:border-purple-400/60 transition-all duration-300 p-4 text-center hover:scale-105 hover:shadow-lg hover:shadow-purple-400/20">
        <div class="text-white font-bold text-lg mb-2 group-hover:text-purple-100 transition-colors duration-300">
          <span class="text-purple-400 text-xl">🛡️</span> {siteConfig.guaranteeHours}hr Guarantee
        </div>
        <div class="text-sm text-purple-100/90 font-medium">Spot-free promise</div>
      </div>
    </div>
  </div>
</div>
