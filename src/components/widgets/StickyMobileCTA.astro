<script>
  /**
   * Smart hide/show behavior for mobile CTA bar
   * - Shows when scrolling down slowly
   * - Hides when scrolling up quickly
   * - Always visible when at top of page
   */
  class StickyMobileCTA {
    constructor() {
      this.element = document.getElementById('sticky-mobile-cta');
      this.lastScrollY = window.scrollY;
      this.scrollDirection = 'down';
      this.isVisible = true;
      
      if (this.element) {
        this.init();
      }
    }
    
    init() {
      // Throttled scroll handler for better performance
      let ticking = false;
      
      const handleScroll = () => {
        if (!ticking) {
          requestAnimationFrame(() => {
            this.handleScrollEvent();
            ticking = false;
          });
          ticking = true;
        }
      };
      
      window.addEventListener('scroll', handleScroll, { passive: true });
      
      // Initial state
      this.updateVisibility();
    }
    
    handleScrollEvent() {
      const currentScrollY = window.scrollY;
      const scrollDelta = currentScrollY - this.lastScrollY;
      
      // Determine scroll direction
      if (scrollDelta > 0) {
        this.scrollDirection = 'down';
      } else if (scrollDelta < 0) {
        this.scrollDirection = 'up';
      }
      
      // Show/hide logic
      const shouldShow = this.shouldShowCTA(currentScrollY, scrollDelta);
      
      if (shouldShow !== this.isVisible) {
        this.isVisible = shouldShow;
        this.updateVisibility();
      }
      
      this.lastScrollY = currentScrollY;
    }
    
    shouldShowCTA(currentScrollY, scrollDelta) {
      // Always show at top of page
      if (currentScrollY < 100) {
        return true;
      }
      
      // Hide when scrolling up quickly (back to top)
      if (this.scrollDirection === 'up' && Math.abs(scrollDelta) > 5) {
        return false;
      }
      
      // Show when scrolling down or slow scroll up
      return true;
    }
    
    updateVisibility() {
      if (this.isVisible) {
        this.element.style.transform = 'translateY(0)';
      } else {
        this.element.style.transform = 'translateY(100%)';
      }
    }
  }
  
  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => new StickyMobileCTA());
  } else {
    new StickyMobileCTA();
  }
  
  // Re-initialize after Astro page transitions
  document.addEventListener('astro:after-swap', () => new StickyMobileCTA());
</script>

<style>
  /* Ensure the sticky bar doesn't interfere with page content */
  #sticky-mobile-cta {
    /* Add safe area padding for devices with notches/home indicators */
    padding-bottom: env(safe-area-inset-bottom, 0);
  }
  
  /* Add bottom padding to body to prevent content overlap */
  @media (max-width: 767px) {
    body {
      padding-bottom: 60px; /* Height of the sticky bar + padding */
    }
  }
  
  /* Smooth transitions */
  #sticky-mobile-cta {
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Ensure buttons are properly sized */
  #sticky-mobile-cta .flex-1 {
    flex: 1;
    min-width: 0; /* Allow shrinking */
  }
  
  #sticky-mobile-cta .flex-2 {
    flex: 1.5;
    min-width: 0; /* Allow shrinking */
  }
  
  /* Improve touch targets */
  #sticky-mobile-cta a {
    min-height: 44px; /* Minimum touch target size */
    touch-action: manipulation; /* Optimize for touch */
  }
</style>