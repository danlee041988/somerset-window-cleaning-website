---
import { Icon } from 'astro-icon/components';

export interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class={`trust-signals ${className}`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="flex flex-wrap items-center justify-center gap-6 md:gap-12 py-4">
      <!-- Fully Insured -->
      <div class="flex items-center gap-2 text-black">
        <Icon name="tabler:shield-check" class="w-6 h-6 text-green-600" />
        <span class="text-sm font-bold">Fully Insured - Â£5M</span>
      </div>
      
      <!-- Eco Friendly -->
      <div class="flex items-center gap-2 text-black">
        <Icon name="tabler:leaf" class="w-6 h-6 text-green-600" />
        <span class="text-sm font-bold">100% Eco-Friendly</span>
      </div>
      
      <!-- Satisfaction Guarantee -->
      <div class="flex items-center gap-2 text-black">
        <Icon name="tabler:certificate" class="w-6 h-6 text-blue-600" />
        <span class="text-sm font-bold">Satisfaction Guarantee</span>
      </div>
      
      <!-- Local Business -->
      <div class="flex items-center gap-2 text-black">
        <Icon name="tabler:map-pin" class="w-6 h-6 text-red-600" />
        <span class="text-sm font-bold">Local Somerset Business</span>
      </div>
    </div>
  </div>
</div>

<style>
  .trust-signals {
    background: linear-gradient(to bottom, #f9fafb, #ffffff);
    border-bottom: 1px solid #e5e7eb;
  }
</style>