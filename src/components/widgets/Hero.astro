---
import Image from '~/components/common/Image.astro';
import FadeInImage from '~/components/common/FadeInImage.astro';
import Button from '~/components/ui/Button.astro';

import type { Hero as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,

  content = await Astro.slots.render('content'),
  actions = await Astro.slots.render('actions'),
  image = await Astro.slots.render('image'),

  id,
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<section class="relative not-prose min-h-screen flex items-center overflow-x-hidden" {...id ? { id } : {}}>
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
    <slot name="bg">
      {bg ? <Fragment set:html={bg} /> : null}
    </slot>
  </div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 w-full">
    <div class="pt-0 md:pt-0 pointer-events-none"></div>
    <div class="py-12 md:py-20">
      <div class="text-center pb-10 md:pb-16 max-w-full lg:max-w-5xl mx-auto px-2 sm:px-4">
        {
          tagline && (
            <p
              class="text-base text-blue-primary font-bold tracking-wide uppercase drop-shadow-lg intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
              set:html={tagline}
            />
          )
        }
        {
          title && (
            <h1
              class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold leading-tight sm:leading-tighter tracking-tight sm:tracking-tighter mb-4 font-heading text-white intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade break-words"
              style="text-shadow: 2px 2px 4px rgba(0,0,0,0.8), 0 0 20px rgba(0,0,0,0.5);"
              set:html={title}
            />
          )
        }
        <div class="max-w-3xl mx-auto">
          {
            subtitle && (
              <p
                class="text-base sm:text-lg md:text-xl text-white font-semibold mb-6 intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade px-2 sm:px-0"
                style="text-shadow: 1px 1px 2px rgba(0,0,0,0.7);"
                set:html={subtitle}
              />
            )
          }
          {
            actions && (
              <div class="max-w-full lg:max-w-4xl m-auto flex flex-col sm:flex-row flex-wrap justify-center gap-3 intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade px-2 sm:px-0">
                {Array.isArray(actions) ? (
                  actions.map((action) => (
                    <div class="flex w-full sm:w-auto">
                      <Button {...(action || {})} class="w-full sm:w-auto sm:mb-0" />
                    </div>
                  ))
                ) : (
                  <Fragment set:html={actions} />
                )}
              </div>
            )
          }
        </div>
        {content && <Fragment set:html={content} />}
      </div>
      <div
        class="intersect-once intersect-no-queue intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
      >
        {
          image && (
            <div class="relative m-auto max-w-5xl">
              {typeof image === 'string' ? (
                <Fragment set:html={image} />
              ) : (
                <FadeInImage
                  class="mx-auto rounded-md w-full"
                  widths={[400, 768, 1024, 2040]}
                  sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
                  priority={true}
                  width={image?.width ?? 1920}
                  height={image?.height ?? 1080}
                  {...image}
                />
              )}
            </div>
          )
        }
      </div>
    </div>
  </div>
</section>

<style>
  /* Responsive optimizations */
  @media (max-width: 640px) {
    :global(.btn), :global(.btn-primary), :global(.btn-secondary), :global(.btn-whatsapp) {
      padding: 0.75rem 1.25rem;
      font-size: 0.875rem;
      white-space: normal;
    }
  }
  
  @media (max-width: 400px) {
    :global(.btn), :global(.btn-primary), :global(.btn-secondary), :global(.btn-whatsapp) {
      padding: 0.625rem 1rem;
      font-size: 0.8125rem;
    }
  }
</style>
