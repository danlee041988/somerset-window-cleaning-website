---
import { SITE } from 'astrowind:config';
import OptimizedImage from '~/components/common/OptimizedImage.astro';
---

<div class="flex items-center gap-3">
  <OptimizedImage
    src="/brand/logo.png"
    alt={SITE?.name ?? 'Somerset Window Cleaning Logo'}
    class="logo-img h-[155px] md:h-[173px] w-auto object-contain transition-all duration-300 ease-out"
    width={500}
    height={500}
    quality={95}
    formats={['avif', 'webp', 'png']}
    critical={true}
    blurUp={false}
    preload={true}
    sizes="(max-width: 768px) 155px, 173px"
    widths={[155, 173, 310, 346]}
  />
</div>
