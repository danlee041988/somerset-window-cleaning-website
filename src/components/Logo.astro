---
import { SITE } from 'astrowind:config';
import OptimizedImage from '~/components/common/OptimizedImage.astro';
---

<div class="flex items-center gap-3">
  <OptimizedImage
    src="/brand/logo.png"
    alt={SITE?.name ?? 'Somerset Window Cleaning Logo'}
    class="logo-img h-16 sm:h-20 lg:h-24 w-auto object-contain transition-all duration-300 ease-out border-0 outline-0 bg-transparent"
    width={500}
    height={500}
    quality={95}
    formats={['avif', 'webp', 'png']}
    critical={true}
    blurUp={false}
    preload={true}
    sizes="(max-width: 640px) 64px, (max-width: 1024px) 80px, 96px"
    widths={[64, 80, 96, 128, 160, 192]}
  />
</div>
