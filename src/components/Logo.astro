---
import { SITE } from 'astrowind:config';
import OptimizedImage from '~/components/common/OptimizedImage.astro';
---

<div class="flex items-center gap-3">
  <OptimizedImage
    src="/brand/logo.png"
    alt={SITE?.name ?? 'Somerset Window Cleaning Logo'}
    class="logo-img h-8 sm:h-10 lg:h-12 w-auto object-contain transition-all duration-300 ease-out border-0 outline-0 bg-transparent"
    width={500}
    height={500}
    quality={95}
    formats={['avif', 'webp', 'png']}
    critical={true}
    blurUp={false}
    preload={true}
    sizes="(max-width: 640px) 32px, (max-width: 1024px) 40px, 48px"
    widths={[32, 40, 48, 64, 80, 96]}
  />
</div>
