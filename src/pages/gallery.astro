---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Image from '~/components/common/Image.astro';

const metadata = {
  title: 'Gallery â€” Somerset Window Cleaning',
  description: 'See our professional window cleaning work across Somerset. Before and after photos showcasing our expertise.',
};

// Sample gallery data - you can replace with your actual photos
const galleryItems = [
  {
    title: 'Victorian House - Wells',
    before: '~/assets/images/DJI_0007.JPG', // Replace with actual before photo
    after: '~/assets/images/DJI_0007.JPG',  // Replace with actual after photo
    description: 'Complete exterior clean including windows, frames, and sills'
  },
  {
    title: 'Modern Office - Bridgwater',
    before: '~/assets/images/DJI_0007.JPG',
    after: '~/assets/images/DJI_0007.JPG',
    description: 'Commercial window cleaning with minimal disruption'
  },
  {
    title: 'Semi-Detached Home - Glastonbury',
    before: '~/assets/images/DJI_0007.JPG',
    after: '~/assets/images/DJI_0007.JPG',
    description: 'Regular maintenance clean with gutter clearing'
  },
  {
    title: 'Conservatory - Street',
    before: '~/assets/images/DJI_0007.JPG',
    after: '~/assets/images/DJI_0007.JPG',
    description: 'Conservatory roof and window cleaning'
  },
  {
    title: 'Cottage - Shepton Mallet',
    before: '~/assets/images/DJI_0007.JPG',
    after: '~/assets/images/DJI_0007.JPG',
    description: 'Period property requiring specialist care'
  },
  {
    title: 'Retail Store - Weston-super-Mare',
    before: '~/assets/images/DJI_0007.JPG',
    after: '~/assets/images/DJI_0007.JPG',
    description: 'High street storefront cleaning'
  }
];
---

<Layout metadata={metadata} structuredDataType="services">
  <!-- Hero Widget ******************* -->
  <Hero>
    <Fragment slot="bg">
      <Image src="~/assets/images/DJI_0007.JPG" alt="" width={1600} height={900} layout="cover" style="width:100%; height:100%; object-fit:cover; opacity:0.35;" />
      <div class="absolute inset-0 bg-black/40"></div>
    </Fragment>
    <Fragment slot="title">
      Our Work Across Somerset
    </Fragment>
    <Fragment slot="subtitle">
      Professional results you can see. Before and after photos showcasing our <span class="text-accent">expertise</span> and attention to detail.
    </Fragment>
  </Hero>

  <!-- Gallery Section -->
  <section class="px-4 py-16 mx-auto sm:px-6 lg:px-8 lg:py-20 max-w-7xl">
    <div class="mb-10 md:mx-auto md:mb-12 text-center max-w-3xl">
      <h2 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
        Before & After Gallery
      </h2>
      <p class="text-xl text-muted dark:text-slate-400">
        See the difference professional window cleaning makes. All work completed with our 48-hour spot-free guarantee.
      </p>
    </div>

    <div class="grid gap-8 md:gap-12">
      {galleryItems.map((item, index) => (
        <div class="grid md:grid-cols-2 gap-6 items-center" key={index}>
          <div class="order-2 md:order-1">
            <h3 class="text-2xl font-bold mb-4">{item.title}</h3>
            <p class="text-lg text-muted mb-6">{item.description}</p>
            
            <div class="grid grid-cols-2 gap-4">
              <div>
                <h4 class="text-sm font-semibold text-muted mb-2 uppercase tracking-wider">Before</h4>
                <div class="relative bg-gray-400 dark:bg-slate-700 rounded-lg overflow-hidden shadow-lg">
                  <Image
                    src={item.before}
                    alt={`Before: ${item.title}`}
                    width={300}
                    height={200}
                    class="w-full h-48 object-cover"
                  />
                  <div class="absolute top-2 left-2 bg-red-500 text-white text-xs px-2 py-1 rounded">
                    Before
                  </div>
                </div>
              </div>
              
              <div>
                <h4 class="text-sm font-semibold text-muted mb-2 uppercase tracking-wider">After</h4>
                <div class="relative bg-gray-400 dark:bg-slate-700 rounded-lg overflow-hidden shadow-lg">
                  <Image
                    src={item.after}
                    alt={`After: ${item.title}`}
                    width={300}
                    height={200}
                    class="w-full h-48 object-cover"
                  />
                  <div class="absolute top-2 left-2 bg-green-500 text-white text-xs px-2 py-1 rounded">
                    After
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <div class="order-1 md:order-2">
            <div class="relative bg-gray-400 dark:bg-slate-700 rounded-lg overflow-hidden shadow-xl">
              <Image
                src={item.after}
                alt={`Completed work: ${item.title}`}
                width={600}
                height={400}
                class="w-full h-64 md:h-80 object-cover"
              />
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- CTA Section -->
    <div class="mt-16 text-center">
      <div class="bg-gradient-to-r from-primary/10 to-accent/10 rounded-2xl p-8 md:p-12">
        <h3 class="text-3xl font-bold mb-4">Ready for Professional Results?</h3>
        <p class="text-lg text-muted mb-6 max-w-2xl mx-auto">
          Join over 4,000 satisfied customers across Somerset who trust us with their window cleaning needs.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/contact" class="btn-primary">
            Get Your Free Quote
            <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </a>
          <a href="tel:01458860339" class="btn btn-secondary">
            Call 01458 860339
            <svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>