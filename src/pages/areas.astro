---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import PostcodeChecker from '~/components/widgets/PostcodeChecker.astro';
import heroImage from '~/assets/images/DJI_0007.JPG';

const metadata = {
  title: 'Areas We Cover | Somerset Window Cleaning',
  description: 'Somerset Window Cleaning covers 38+ postcodes across Somerset, Bath, and surrounding areas. Check if we service your location.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Hero
    tagline="Coverage Area"
    title="Areas We Cover"
    subtitle="Professional window cleaning services across Somerset, Bath & surrounding areas"
    image={{
      src: heroImage,
      alt: 'Somerset coverage area map',
    }}
  />

  <!-- Postcode Checker -->
  <PostcodeChecker />

  <!-- Coverage Areas -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Our Service Areas</h2>
        <p class="text-lg text-gray-800 max-w-3xl mx-auto">
          We provide regular window cleaning services to residential and commercial properties 
          across Somerset and surrounding areas. Below are the postcodes we currently cover.
        </p>
      </div>

      <!-- Coverage Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Bath & North East Somerset -->
        <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-red-200 group">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-12 h-12 bg-gradient-to-br from-red-500 to-red-600 rounded-xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 group-hover:text-red-600 transition-colors duration-300">Bath & North East Somerset</h3>
          </div>
          <div class="space-y-3">
            <div class="flex items-start gap-2">
              <span class="text-red-500 font-semibold text-sm">Postcodes:</span>
              <span class="text-gray-700 font-medium">BA1, BA2, BA3</span>
            </div>
            <p class="text-gray-800 leading-relaxed">Including Bath city centre, Bathwick, Combe Down, and surrounding areas.</p>
          </div>
        </div>

        <!-- Mendip -->
        <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-red-200 group">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-12 h-12 bg-gradient-to-br from-red-500 to-red-600 rounded-xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 group-hover:text-red-600 transition-colors duration-300">Mendip District</h3>
          </div>
          <div class="space-y-3">
            <div class="flex items-start gap-2">
              <span class="text-red-500 font-semibold text-sm">Postcodes:</span>
              <span class="text-gray-700 font-medium">BA4, BA5, BA6, BA11, BA16</span>
            </div>
            <p class="text-gray-800 leading-relaxed">Including Shepton Mallet, Wells, Glastonbury, Street, and Frome.</p>
          </div>
        </div>

        <!-- Sedgemoor -->
        <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-red-200 group">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-12 h-12 bg-gradient-to-br from-red-500 to-red-600 rounded-xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 group-hover:text-red-600 transition-colors duration-300">Sedgemoor</h3>
          </div>
          <div class="space-y-3">
            <div class="flex items-start gap-2">
              <span class="text-red-500 font-semibold text-sm">Postcodes:</span>
              <span class="text-gray-700 font-medium">BA6, BA7, BA8</span>
            </div>
            <p class="text-gray-800 leading-relaxed">Including Bridgwater, Burnham-on-Sea, and Highbridge.</p>
          </div>
        </div>

        <!-- South Somerset -->
        <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-red-200 group">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-12 h-12 bg-gradient-to-br from-red-500 to-red-600 rounded-xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 group-hover:text-red-600 transition-colors duration-300">South Somerset</h3>
          </div>
          <div class="space-y-3">
            <div class="flex items-start gap-2">
              <span class="text-red-500 font-semibold text-sm">Postcodes:</span>
              <span class="text-gray-700 font-medium">BA9, BA10, BA20, BA21, BA22</span>
            </div>
            <p class="text-gray-800 leading-relaxed">Including Yeovil, Castle Cary, Wincanton, and Chard.</p>
          </div>
        </div>

        <!-- Taunton Deane -->
        <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-red-200 group">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-12 h-12 bg-gradient-to-br from-red-500 to-red-600 rounded-xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 group-hover:text-red-600 transition-colors duration-300">Taunton Deane</h3>
          </div>
          <div class="space-y-3">
            <div class="flex items-start gap-2">
              <span class="text-red-500 font-semibold text-sm">Postcodes:</span>
              <span class="text-gray-700 font-medium">TA1, TA2, TA3, TA4</span>
            </div>
            <p class="text-gray-800 leading-relaxed">Including Taunton, Wellington, and surrounding villages.</p>
          </div>
        </div>

        <!-- West Somerset & More -->
        <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-red-200 group">
          <div class="flex items-center gap-4 mb-6">
            <div class="w-12 h-12 bg-gradient-to-br from-red-500 to-red-600 rounded-xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-300">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 group-hover:text-red-600 transition-colors duration-300">West Somerset & Beyond</h3>
          </div>
          <div class="space-y-3">
            <div class="flex items-start gap-2">
              <span class="text-red-500 font-semibold text-sm">Postcodes:</span>
              <span class="text-gray-700 font-medium">TA5-TA24, BS25-BS28</span>
            </div>
            <p class="text-gray-800 leading-relaxed">Including Minehead, Watchet, and parts of North Somerset.</p>
          </div>
        </div>
      </div>

      <!-- Additional Info -->
      <div class="mt-12 text-center">
        <div class="bg-blue-50 rounded-lg p-6 max-w-3xl mx-auto">
          <p class="text-gray-700">
            <strong>Don't see your postcode?</strong> We occasionally service areas outside our standard coverage 
            for larger properties and commercial contracts. Please <a href="/book-online" class="text-brand-red hover:underline">get in touch</a> to 
            discuss your requirements.
          </p>
        </div>
      </div>

      <!-- CTA -->
      <div class="mt-12 text-center">
        <a href="/book-online" class="btn btn-primary text-lg px-8 py-4">
          Book Your Service
        </a>
      </div>
    </div>
  </section>
</Layout>