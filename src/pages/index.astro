---
import Layout from '~/layouts/PageLayout.astro';
import Image from '~/components/common/Image.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
// Removed template filler widgets for a clean marketing page
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Process from '~/components/widgets/Process.astro';

const metadata = {
  title: 'Somerset Window Cleaning — Professional window cleaning across Somerset',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata} structuredDataType="homepage">
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      { variant: 'primary', text: 'Get a quote', href: '/contact', icon: 'tabler:calendar' },
      { text: 'Check your postcode', href: '/contact#postcode-checker', icon: 'tabler:map-pin' },
    ]}
  >
    <Fragment slot="bg">
      <Image src="~/assets/images/DJI_0007.JPG" alt="" width={1600} height={900} layout="cover" style="width:100%; height:100%; object-fit:cover; opacity:0.35;" />
      <div class="absolute inset-0 bg-black/40"></div>
    </Fragment>
    <Fragment slot="title">
      Crystal‑clear windows. <span class="text-accent">Reliable</span> service.
    </Fragment>
    <Fragment slot="subtitle">
      Professional exterior cleaning across Somerset — <span class="text-accent">fully insured</span>, friendly and on‑time.
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Services"
    title="Professional exterior cleaning"
    subtitle="Reliable, fully insured cleaning across Somerset."
    items={[
      {
        title: 'Window cleaning',
        description: 'Pure water system for a streak‑free finish. Frames and sills included as standard.',
        icon: 'tabler:sparkles',
      },
      {
        title: 'Gutter clearing',
        description: 'Vacuum system to safely remove moss and leaves.',
        icon: 'tabler:brand-abstract',
      },
      {
        title: 'Fascia & soffit',
        description: 'Revive UPVC fascias, soffits and gutters with a gentle yet thorough clean.',
        icon: 'tabler:home',
      },
      {
        title: 'Conservatory roof cleaning',
        description: 'Roof panels and frames carefully cleaned to bring back the sparkle.',
        icon: 'tabler:building',
      },
      {
        title: 'Solar panels',
        description: 'Specialist panel cleaning to help maintain efficiency and warranties.',
        icon: 'tabler:sun',
      },
      {
        title: 'Commercial',
        description: 'Shops, offices and managed sites with minimal disruption and flexible scheduling.',
        icon: 'tabler:building-store',
      },
    ]}
  />

  <!-- Trust bar ************************ -->
  <Stats
    stats={[
      { title: 'Regular Customers', amount: '4,000+' },
      { title: 'Professional Vans', amount: '6' },
      { title: 'Google Rating', amount: '4.9★' },
      { title: 'Established', amount: '2019' },
    ]}
  />

  <!-- Process Widget ******************* -->

  <Process
    id="process"
    tagline="How it works"
    title="Simple, reliable service"
    subtitle="Clear steps from quote to payment."
    items={[
      { title: 'Get a fast quote', description: 'Send your details and photos (optional) — we reply within one working day.', icon: 'tabler:message-2', callToAction: { variant: 'primary', text: 'Get a quote', href: '/contact', icon: 'tabler:calendar' } },
      { title: 'Reminder', description: 'We email or text before each visit with the scheduled day (no specific time provided).', icon: 'tabler:bell' },
      { title: 'We carry out your exterior clean', description: 'Windows, frames and sills included as standard — with our 48‑hour spot‑free guarantee. Add gutter clearing, fascia & soffit, conservatory roof and solar panel cleaning if needed.', icon: 'tabler:sparkles' },
      { title: 'Invoice & payment', description: 'Pay by Direct Debit (GoCardless), card (Stripe) or bank transfer.', icon: 'tabler:credit-card' },
    ]}
  />

  <!-- Testimonials ******************************* -->
  <Testimonials
    title="What our customers say"
    scroll={false}
    classes={{ container: 'max-w-7xl' }}
    testimonials={[
      {
        testimonial: 'Second window clean with Somerset Window Cleaning — excellent on both occasions.',
        name: 'Jodie Cater',
        rating: 5,
      },
      {
        testimonial: 'Dylan did a fantastic window clean this morning. Hard-to-reach, high windows left spotless.',
        name: 'Sandra',
        rating: 5,
      },
      {
        testimonial: 'Would highly recommend — brilliant service, windows have never been cleaner. Very polite operative.',
        name: 'Dean Rowland',
        rating: 5,
      },
      {
        testimonial: 'Great experience — windows done brilliantly. Reliable company, would use again.',
        name: 'Jayne Trott',
        rating: 5,
      },
      {
        testimonial: 'Very friendly and thorough service. Would definitely recommend.',
        name: 'Cher Davis',
        rating: 5,
      },
      {
        testimonial: 'Needed a clean urgently before a viewing — rapid response and excellent result.',
        name: 'TheShortfry',
        rating: 5,
      },
    ]}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Answers to common questions about pricing, schedules and what’s included."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'How much does window cleaning cost?',
        description: 'Residential window cleaning starts from £15 for a 2-bedroom house. Prices vary by property size and frequency.',
      },
      {
        title: 'Do I need to be home during cleaning?',
        description: 'No. Exterior cleaning does not require you to be at home. For interior windows we’ll arrange a convenient time.',
      },
      {
        title: 'How often should windows be cleaned?',
        description: 'We recommend every 4–8 weeks to maintain clarity and prevent damage.',
      },
      {
        title: 'Are you insured?',
        description: 'Yes, we carry full public liability insurance and all team members are trained professionals.',
      },
      {
        title: 'What areas do you cover?',
        description: 'We serve customers across Somerset. Contact us with your postcode and we’ll confirm availability.',
      },
      {
        title: 'Do you offer gutter, fascia/soffit and conservatory roof cleaning?',
        description: 'Yes. We provide gutter clearing, fascia & soffit cleaning, conservatory roof cleaning and solar panel cleaning. Ask for a combined quote.',
      },
      {
        title: 'Do you clean in the rain?',
        description: 'Yes — light rain is fine with pure water systems. We offer a 48‑hour spot‑free guarantee: report issues within 48–72 hours and we’ll revisit free.',
      },
      {
        title: 'How do I pay?',
        description: 'Direct Debit via GoCardless is preferred (link below). We also accept card (Stripe) or bank transfer. For bank transfer details, please use the reference on your invoice or contact us and we’ll send them securely.',
        callToAction: { text: 'Set up Direct Debit', href: '/contact?method=direct-debit' },
      },
      {
        title: 'What if my gate is locked or I have dogs?',
        description: 'Please ensure access on your clean day. If we cannot access, we’ll attempt to contact you. Skips/cancellations should follow rota rules/notice to avoid charges.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      { variant: 'primary', text: 'Get a quote', href: '/contact', icon: 'tabler:calendar' },
      { variant: 'whatsapp', text: 'WhatsApp', href: 'https://wa.me/447415526331?text=Hi%20Somerset%20Window%20Cleaning%2C%20please%20can%20I%20get%20a%20quote%20for%20window%20cleaning%20at%20%5Byour%20address%5D', icon: 'tabler:brand-whatsapp' },
      { text: 'Call 01458 860339', href: 'tel:01458860339', icon: 'tabler:phone' },
    ]}
  >
    <Fragment slot="title">
      Ready for sparkling clean windows?
    </Fragment>

    <Fragment slot="subtitle">
      Get a fast, no‑obligation quote today. Fully insured. Reliable. Friendly.
    </Fragment>
  </CallToAction>
</Layout>
