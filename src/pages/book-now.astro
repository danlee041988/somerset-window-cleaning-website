---
import Layout from '~/layouts/PageLayout.astro';
import Image from '~/components/common/Image.astro';
import { siteConfig } from '~/config/site';

const metadata = {
  title: 'Request Your Free Quote | Somerset Window Cleaning',
  description: 'Get a personalized quote for window cleaning, gutter clearing, conservatory cleaning and more. Professional service across Somerset. Quick response guaranteed.',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata} structuredDataType="services">
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-br from-gray-900 to-black py-16 overflow-hidden">
    <div class="absolute inset-0">
      <Image 
        src="~/assets/images/new-hero-image.jpg" 
        alt="Professional window cleaning service" 
        width={1600} 
        height={600} 
        style="width:100%; height:100%; object-fit:cover; opacity:0.3;" 
      />
      <div class="absolute inset-0 bg-gradient-to-r from-black/60 to-gray-900/60"></div>
    </div>
    <div class="relative max-w-6xl mx-auto px-4 text-center">
      <div class="inline-flex items-center bg-brand-red text-white px-4 py-2 rounded-full text-sm font-semibold mb-4">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Free Quote Request
      </div>
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">
        Request Your <span class="text-brand-red">Free Quote</span>
      </h1>
      <p class="text-gray-200 text-xl mb-8 max-w-3xl mx-auto">
        Professional window cleaning and exterior services across Somerset. 
        Tell us about your property and requirements for a personalized quote.
      </p>
      
      <!-- Trust Indicators -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-4xl mx-auto">
        <div class="flex flex-col items-center text-center p-4">
          <svg class="w-6 h-6 text-brand-red-medium mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span class="text-white font-medium text-sm">Fast Response</span>
        </div>
        <div class="flex flex-col items-center text-center p-4">
          <svg class="w-6 h-6 text-brand-red-medium mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-4 8v0m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z"/>
          </svg>
          <span class="text-white font-medium text-sm">Fully Insured</span>
        </div>
        <div class="flex flex-col items-center text-center p-4">
          <svg class="w-6 h-6 text-brand-red-medium mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span class="text-white font-medium text-sm">Flexible Scheduling</span>
        </div>
        <div class="flex flex-col items-center text-center p-4">
          <svg class="w-6 h-6 text-brand-red-medium mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
          <span class="text-white font-medium text-sm">{siteConfig.guaranteeHours}hr Guarantee</span>
        </div>
      </div>
    </div>
  </div>

  <!-- NoteForm Booking Section -->
  <section class="py-12 bg-black">
    <div class="max-w-4xl mx-auto px-4">
      <div class="text-center mb-8">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Get Your Quote & Book Service</h2>
        <p class="text-gray-300 text-lg">Complete the form below and we'll get back to you within 24 hours with your quote</p>
      </div>
      
      <!-- NoteForm Embedded Booking Form -->
      <div class="bg-white rounded-2xl shadow-xl overflow-hidden border-4 border-gray-800">
        <div class="bg-gray-800 px-6 py-4">
          <h3 class="text-white font-semibold text-lg">Service Booking Form</h3>
          <p class="text-gray-300 text-sm">Complete the details below to request your quote</p>
        </div>
        <iframe 
          style="border:none;width:100%;min-height:700px;background:white;" 
          id="noteform-45skqy" 
          src="https://noteforms.com/forms/noteform-45skqy"
          title="Somerset Window Cleaning Booking Form"
          loading="lazy"
        ></iframe>
      </div>
    </div>
  </section>

  <!-- Contact Information Section -->
  <section class="py-16 bg-gradient-to-br from-gray-900 via-gray-800 to-black relative overflow-hidden">
    <!-- Decorative background elements -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-72 h-72 bg-brand-red rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-0 w-96 h-96 bg-blue-600 rounded-full blur-3xl"></div>
    </div>
    
    <div class="relative max-w-5xl mx-auto px-4">
      <div class="text-center mb-12">
        <h3 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Need Help? <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-red to-brand-red-light">Contact Us Directly</span>
        </h3>
        <p class="text-gray-400 text-lg max-w-2xl mx-auto">
          Choose your preferred method of contact and we'll respond within 24 hours
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
        <!-- Call Card -->
        <a href="tel:01458860339" class="group relative bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl p-8 shadow-xl transform transition-all duration-300 hover:scale-105 hover:shadow-2xl overflow-hidden">
          <!-- Hover gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-br from-brand-red/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          
          <div class="relative z-10">
            <div class="bg-gradient-to-br from-brand-red to-red-700 rounded-2xl p-4 mb-6 w-20 h-20 flex items-center justify-center mx-auto shadow-lg group-hover:shadow-brand-red/50 transition-shadow duration-300">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <h4 class="text-white font-bold text-xl mb-3 text-center">Call Us</h4>
            <p class="text-brand-red-light font-semibold text-lg text-center group-hover:text-brand-red transition-colors duration-300">01458 860339</p>
            <p class="text-gray-500 text-sm text-center mt-2">Mon-Sat: 8am-6pm</p>
          </div>
          
          <!-- Decorative corner accent -->
          <div class="absolute top-0 right-0 w-24 h-24 bg-gradient-to-bl from-brand-red/10 to-transparent"></div>
        </a>
        
        <!-- WhatsApp Card -->
        <a href="https://wa.me/447415526331" target="_blank" rel="noopener noreferrer" class="group relative bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl p-8 shadow-xl transform transition-all duration-300 hover:scale-105 hover:shadow-2xl overflow-hidden">
          <!-- Hover gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-br from-green-600/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          
          <div class="relative z-10">
            <div class="bg-gradient-to-br from-green-600 to-green-700 rounded-2xl p-4 mb-6 w-20 h-20 flex items-center justify-center mx-auto shadow-lg group-hover:shadow-green-600/50 transition-shadow duration-300">
              <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51a12.8 12.8 0 00-.57-.01c-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
            </div>
            <h4 class="text-white font-bold text-xl mb-3 text-center">WhatsApp</h4>
            <p class="text-green-400 font-semibold text-lg text-center group-hover:text-green-300 transition-colors duration-300">Message Us</p>
            <p class="text-gray-500 text-sm text-center mt-2">Quick responses</p>
          </div>
          
          <!-- Decorative corner accent -->
          <div class="absolute top-0 right-0 w-24 h-24 bg-gradient-to-bl from-green-600/10 to-transparent"></div>
        </a>
        
        <!-- Email Card -->
        <a href="mailto:info@somersetwindowcleaning.co.uk" class="group relative bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl p-8 shadow-xl transform transition-all duration-300 hover:scale-105 hover:shadow-2xl overflow-hidden">
          <!-- Hover gradient overlay -->
          <div class="absolute inset-0 bg-gradient-to-br from-blue-600/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          
          <div class="relative z-10">
            <div class="bg-gradient-to-br from-blue-600 to-blue-700 rounded-2xl p-4 mb-6 w-20 h-20 flex items-center justify-center mx-auto shadow-lg group-hover:shadow-blue-600/50 transition-shadow duration-300">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <h4 class="text-white font-bold text-xl mb-3 text-center">Email Us</h4>
            <div class="space-y-1">
              <p class="text-blue-400 font-semibold text-sm text-center group-hover:text-blue-300 transition-colors duration-300 break-all">info@somersetwindowcleaning.co.uk</p>
              <p class="text-gray-500 text-sm text-center">24hr response time</p>
            </div>
          </div>
          
          <!-- Decorative corner accent -->
          <div class="absolute top-0 right-0 w-24 h-24 bg-gradient-to-bl from-blue-600/10 to-transparent"></div>
        </a>
      </div>
      
      <!-- Additional info -->
      <div class="text-center mt-12">
        <p class="text-gray-500 text-sm">
          All contact methods are monitored during business hours • 
          <span class="text-gray-400">Emergency? Call us directly for urgent matters</span>
        </p>
      </div>
    </div>
  </section>

  <!-- Load NoteForm Script -->
  <script type="text/javascript" src="https://noteforms.com/widgets/iframe.min.js"></script>
  <script>
    // Initialize NoteForm when the page loads
    document.addEventListener('DOMContentLoaded', function() {
      if (typeof initEmbed === 'function') {
        initEmbed('noteform-45skqy');
      }
    });
  </script>
</Layout>