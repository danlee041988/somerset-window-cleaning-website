---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Image from '~/components/common/Image.astro';
import LiveReviews from '~/components/widgets/LiveReviews.astro';

const metadata = {
  title: 'Commercial Window Cleaning Somerset | Professional Business Service | Somerset Window Cleaning',
  description: 'Professional commercial window cleaning across Somerset. Offices, shops, schools, healthcare facilities. Flexible scheduling, health & safety compliant, fully insured.',
};
---

<Layout metadata={metadata} structuredDataType="service" isDark={true}>
  <!-- Hero Section -->
  <Hero
    actions={[
      { variant: 'primary', text: 'Get FREE Business Quote', href: '/booking-2step', icon: 'tabler:building' },
      { text: 'Call 01458 860339', href: 'tel:01458860339', icon: 'tabler:phone' },
    ]}
  >
    <Fragment slot="title">
      <span class="text-primary">Commercial</span> Window Cleaning Somerset
    </Fragment>
    <Fragment slot="subtitle">
      Professional window cleaning for businesses across Somerset. Maintain your professional appearance with reliable, health & safety compliant service that works around your schedule.
    </Fragment>
    <Fragment slot="bg">
      <Image src="~/assets/images/DJI_0007.JPG" alt="Commercial window cleaning service Somerset" width={1600} height={900} layout="cover" style="width:100%; height:100%; object-fit:cover; opacity:0.55;" />
      <div class="absolute inset-0 bg-black/40"></div>
    </Fragment>
  </Hero>

  <!-- Business Stats -->
  <Stats
    title="Trusted by Somerset Businesses"
    stats={[
      { title: 'Business Clients', amount: '200+', description: 'Regular commercial customers' },
      { title: 'Sectors Served', amount: '15+', description: 'Different business types' },
      { title: 'Safety Record', amount: '100%', description: 'Incident-free since 2019' },
      { title: 'Client Retention', amount: '95%+', description: 'Customer satisfaction rate' },
    ]}
  />

  <!-- Key Benefits -->
  <Features
    id="commercial-benefits"
    title="Why Businesses Choose Us"
    subtitle="Professional window cleaning that enhances your business image"
    items={[
      {
        title: 'Professional Appearance',
        description: 'Clean windows create the professional first impression that customers and clients expect from your business.',
        icon: 'tabler:building',
      },
      {
        title: 'Flexible Scheduling',
        description: 'We work around your business hours with early morning, evening, and weekend options to minimize disruption.',
        icon: 'tabler:clock',
      },
      {
        title: 'Health & Safety Compliant',
        description: 'Fully insured with all necessary certifications, risk assessments, and safety procedures for commercial work.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Reliable Service',
        description: 'Consistent, dependable cleaning with backup coverage to ensure your schedule is always maintained.',
        icon: 'tabler:star',
      },
    ]}
  />

  <!-- Industries -->
  <WidgetWrapper isDark={true}>
    <section class="py-16 max-w-7xl mx-auto px-4 text-center">
      <h2 class="text-4xl font-bold mb-6">Industries We Serve</h2>
      <p class="text-xl text-gray-300 mb-12 max-w-3xl mx-auto">Trusted by businesses of all types across Somerset - from local shops to corporate headquarters, healthcare facilities to industrial sites.</p>

      <div class="grid md:grid-cols-3 lg:grid-cols-4 gap-6 max-w-6xl mx-auto">
        <!-- Office & Professional -->
        <div class="bg-gradient-to-br from-red-50 to-red-100 dark:from-gray-800 dark:to-gray-700 p-6 rounded-xl shadow-lg border border-red-200 dark:border-gray-600 hover:shadow-xl transition-shadow duration-300">
          <div class="w-12 h-12 bg-red-600 rounded-lg flex items-center justify-center mb-4 mx-auto">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Office Buildings</h3>
          <p class="text-sm text-white/90">Corporate offices, business parks, co-working spaces</p>
        </div>

        <!-- Retail & Shops -->
        <div class="bg-gradient-to-br from-red-50 to-red-100 dark:from-gray-800 dark:to-gray-700 p-6 rounded-xl shadow-lg border border-red-200 dark:border-gray-600 hover:shadow-xl transition-shadow duration-300">
          <div class="w-12 h-12 bg-red-600 rounded-lg flex items-center justify-center mb-4 mx-auto">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Retail & Shops</h3>
          <p class="text-sm text-white/90">Shop fronts, boutiques, supermarkets, shopping centers</p>
        </div>

        <!-- Restaurants & Hospitality -->
        <div class="bg-gradient-to-br from-red-50 to-red-100 dark:from-gray-800 dark:to-gray-700 p-6 rounded-xl shadow-lg border border-red-200 dark:border-gray-600 hover:shadow-xl transition-shadow duration-300">
          <div class="w-12 h-12 bg-red-600 rounded-lg flex items-center justify-center mb-4 mx-auto">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Restaurants & Hospitality</h3>
          <p class="text-sm text-white/90">Cafes, restaurants, hotels, guest houses, pubs</p>
        </div>

        <!-- Healthcare -->
        <div class="bg-gradient-to-br from-red-50 to-red-100 dark:from-gray-800 dark:to-gray-700 p-6 rounded-xl shadow-lg border border-red-200 dark:border-gray-600 hover:shadow-xl transition-shadow duration-300">
          <div class="w-12 h-12 bg-red-600 rounded-lg flex items-center justify-center mb-4 mx-auto">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Healthcare</h3>
          <p class="text-sm text-white/90">Medical centers, dental practices, care homes</p>
        </div>

        <!-- Education -->
        <div class="bg-gradient-to-br from-red-50 to-red-100 dark:from-gray-800 dark:to-gray-700 p-6 rounded-xl shadow-lg border border-red-200 dark:border-gray-600 hover:shadow-xl transition-shadow duration-300">
          <div class="w-12 h-12 bg-red-600 rounded-lg flex items-center justify-center mb-4 mx-auto">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Education</h3>
          <p class="text-sm text-white/90">Schools, colleges, universities, nurseries</p>
        </div>

        <!-- Industrial & Manufacturing -->
        <div class="bg-gradient-to-br from-red-50 to-red-100 dark:from-gray-800 dark:to-gray-700 p-6 rounded-xl shadow-lg border border-red-200 dark:border-gray-600 hover:shadow-xl transition-shadow duration-300">
          <div class="w-12 h-12 bg-red-600 rounded-lg flex items-center justify-center mb-4 mx-auto">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Industrial & Manufacturing</h3>
          <p class="text-sm text-white/90">Factories, warehouses, distribution centers</p>
        </div>

        <!-- Professional Services -->
        <div class="bg-gradient-to-br from-red-50 to-red-100 dark:from-gray-800 dark:to-gray-700 p-6 rounded-xl shadow-lg border border-red-200 dark:border-gray-600 hover:shadow-xl transition-shadow duration-300">
          <div class="w-12 h-12 bg-red-600 rounded-lg flex items-center justify-center mb-4 mx-auto">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Professional Services</h3>
          <p class="text-sm text-white/90">Law firms, accountants, consultants, agencies</p>
        </div>

        <!-- Gyms & Leisure -->
        <div class="bg-gradient-to-br from-red-50 to-red-100 dark:from-gray-800 dark:to-gray-700 p-6 rounded-xl shadow-lg border border-red-200 dark:border-gray-600 hover:shadow-xl transition-shadow duration-300">
          <div class="w-12 h-12 bg-red-600 rounded-lg flex items-center justify-center mb-4 mx-auto">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Gyms & Leisure</h3>
          <p class="text-sm text-white/90">Fitness centers, sports clubs, leisure facilities</p>
        </div>

        <!-- Veterinary & Animal Care -->
        <div class="bg-gradient-to-br from-red-50 to-red-100 dark:from-gray-800 dark:to-gray-700 p-6 rounded-xl shadow-lg border border-red-200 dark:border-gray-600 hover:shadow-xl transition-shadow duration-300">
          <div class="w-12 h-12 bg-red-600 rounded-lg flex items-center justify-center mb-4 mx-auto">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Veterinary & Animal Care</h3>
          <p class="text-sm text-white/90">Vet clinics, animal hospitals, pet services</p>
        </div>

        <!-- Financial Services -->
        <div class="bg-gradient-to-br from-red-50 to-red-100 dark:from-gray-800 dark:to-gray-700 p-6 rounded-xl shadow-lg border border-red-200 dark:border-gray-600 hover:shadow-xl transition-shadow duration-300">
          <div class="w-12 h-12 bg-red-600 rounded-lg flex items-center justify-center mb-4 mx-auto">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Financial Services</h3>
          <p class="text-sm text-white/90">Banks, insurance companies, financial advisors</p>
        </div>

        <!-- Public Buildings -->
        <div class="bg-gradient-to-br from-red-50 to-red-100 dark:from-gray-800 dark:to-gray-700 p-6 rounded-xl shadow-lg border border-red-200 dark:border-gray-600 hover:shadow-xl transition-shadow duration-300">
          <div class="w-12 h-12 bg-red-600 rounded-lg flex items-center justify-center mb-4 mx-auto">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Public Buildings</h3>
          <p class="text-sm text-white/90">Community centers, libraries, town halls</p>
        </div>

        <!-- Automotive -->
        <div class="bg-gradient-to-br from-red-50 to-red-100 dark:from-gray-800 dark:to-gray-700 p-6 rounded-xl shadow-lg border border-red-200 dark:border-gray-600 hover:shadow-xl transition-shadow duration-300">
          <div class="w-12 h-12 bg-red-600 rounded-lg flex items-center justify-center mb-4 mx-auto">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-white mb-2">Automotive</h3>
          <p class="text-sm text-white/90">Car dealerships, garages, auto services</p>
        </div>
      </div>

      <div class="mt-12 text-center">
        <p class="text-gray-300 mb-4">Don't see your industry? We serve all types of commercial premises across Somerset.</p>
        <a href="/contact" class="inline-flex items-center px-6 py-3 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-lg transition-colors">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
          Contact Us for Your Industry
        </a>
      </div>
    </section>
  </WidgetWrapper>



  <!-- Service Process -->
  <Features2
    title="Our Simple Process"
    subtitle="How we deliver professional exterior cleaning services"
    isDark={true}
    columns={4}
    items={[
      {
        title: 'Free Site Assessment',
        description: 'We visit your premises to assess your specific cleaning requirements and provide a tailored quote for any service.',
        icon: 'tabler:search',
      },
      {
        title: 'Schedule Planning',
        description: 'Work with you to establish the best cleaning schedule and frequency for your business needs.',
        icon: 'tabler:calendar',
      },
      {
        title: 'Professional Service',
        description: 'Our uniformed, ID-carrying team arrives on time, texts before each visit, and delivers guaranteed quality results.',
        icon: 'tabler:sparkles',
      },
      {
        title: 'Long-term Partnership',
        description: 'Build a reliable relationship with consistent team members and dedicated account management for ongoing service.',
        icon: 'tabler:repeat',
      },
    ]}
  />



  <!-- Google Reviews -->
  <LiveReviews />

  <!-- FAQs -->
  <FAQs
    title="Commercial Window Cleaning Questions"
    subtitle="Common questions about our business window cleaning service"
    isDark={true}
    items={[
      {
        title: 'Can you work around our business hours?',
        description: 'Yes, we offer flexible scheduling including early morning, evening, and weekend work to minimize disruption to your business operations.',
      },
      {
        title: 'Do you provide insurance documentation?',
        description: 'Yes, we carry full commercial liability insurance and provide certificates to all business customers before work commences.',
      },
      {
        title: 'How do you handle access to our premises?',
        description: 'We work with you to arrange convenient access times and can coordinate with building management or security as needed.',
      },

    ]}
  />

</Layout>