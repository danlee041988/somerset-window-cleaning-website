---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Image from '~/components/common/Image.astro';

const metadata = {
  title: 'Professional Window Cleaning Somerset | Pure Water System | Somerset Window Cleaning',
  description: 'Professional residential window cleaning across Somerset. Pure water reach-and-wash system for streak-free results. Frames & sills included. Fully insured service.',
};
---

<Layout metadata={metadata} structuredDataType="service">
  <!-- Hero Section -->
  <Hero
    actions={[
      { variant: 'primary', text: 'Get Free Quote', href: '/booking-2step', icon: 'tabler:calculator' },
      { text: 'Call 01458 860339', href: 'tel:01458860339', icon: 'tabler:phone' },
    ]}
  >
    <Fragment slot="title">
      Crystal Clear <span class="text-accent">Window Cleaning</span> Somerset
    </Fragment>
    <Fragment slot="subtitle">
      Professional pure water system for streak-free results. Your windows cleaned safely with minimal ladder use - reach-and-wash technology for upper floors, just sparkling clean glass every time.
    </Fragment>
    <Fragment slot="bg">
      <Image src="~/assets/images/DJI_0007.JPG" alt="Professional window cleaning service Somerset" width={1600} height={900} layout="cover" style="width:100%; height:100%; object-fit:cover; opacity:0.35;" />
      <div class="absolute inset-0 bg-black/40"></div>
    </Fragment>
  </Hero>

  <!-- Trust Stats -->
  <Stats
    title="Trusted by Somerset Families"
    stats={[
      { title: 'Happy Customers', amount: '4,000+', description: 'Across Somerset' },
      { title: 'Years Experience', amount: '5+', description: 'Since 2019' },
      { title: 'Guarantee', amount: '48hr', description: 'Spot-free promise' },
      { title: 'Google Rating', amount: '4.9★', description: 'Customer reviews' },
    ]}
  />

  <!-- Service Overview -->
  <WidgetWrapper>
    <section class="py-12 max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-6">Why Choose Our Window Cleaning Service?</h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">We use the latest pure water technology to clean your windows from the ground level - safer for us, better for your property, and guaranteed streak-free results every time.</p>
      </div>
      
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="bg-blue-50 border-l-4 border-blue-400 p-6 mb-6">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <svg class="h-6 w-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-lg font-semibold text-blue-900 mb-2">Pure Water Technology</h3>
                <p class="text-blue-800">Our pure water system removes all minerals and impurities, ensuring your windows dry completely clear without water marks or streaks - guaranteed.</p>
              </div>
            </div>
          </div>

          <h3 class="text-xl font-semibold mb-4">What's Always Included</h3>
          <div class="grid md:grid-cols-2 gap-4">
            <ul class="space-y-3">
              <li class="flex items-center"><span class="text-green-500 mr-2 text-lg">✓</span> All exterior window surfaces</li>
              <li class="flex items-center"><span class="text-green-500 mr-2 text-lg">✓</span> Window frames cleaned</li>
              <li class="flex items-center"><span class="text-green-500 mr-2 text-lg">✓</span> First floor windows included</li>
              <li class="flex items-center"><span class="text-green-500 mr-2 text-lg">✓</span> Door glass included</li>
            </ul>
            <ul class="space-y-3">
              <li class="flex items-center"><span class="text-green-500 mr-2 text-lg">✓</span> 48-hour spot-free guarantee</li>
              <li class="flex items-center"><span class="text-green-500 mr-2 text-lg">✓</span> Fully insured service</li>
              <li class="flex items-center"><span class="text-green-500 mr-2 text-lg">✓</span> Ladders for low level access only</li>
              <li class="flex items-center"><span class="text-green-500 mr-2 text-lg">✓</span> Text before each visit</li>
            </ul>
          </div>
        </div>

        <div class="text-center">
          <Image src="~/assets/images/solar-panels.jpeg" alt="Professional window cleaning equipment" width={500} height={400} class="rounded-lg shadow-lg" />
          <p class="text-sm text-gray-600 mt-4">Professional pure water cleaning system - safer and more effective than traditional methods</p>
        </div>
      </div>
    </section>
  </WidgetWrapper>

  <!-- Key Benefits -->
  <Features
    id="benefits"
    title="The Somerset Window Cleaning Difference"
    subtitle="Why thousands of Somerset homeowners trust us with their windows"
    items={[
      {
        title: 'Pure Water System',
        description: 'Advanced filtration removes all minerals for naturally streak-free drying. No chemicals, no residue, just crystal clear results.',
        icon: 'tabler:droplet',
      },
      {
        title: 'Ground Level Safety',
        description: 'Our reach-and-wash poles minimize ladder use for upper floors - safer for your property with reduced risk of damage or accidents.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Frames & Sills Included',
        description: 'Complete window cleaning service includes frames, sills and door glass as standard - not just the glass.',
        icon: 'tabler:home',
      },
      {
        title: '48-Hour Guarantee',
        description: 'If spots appear within 48 hours, we\'ll return free of charge. We stand behind our work with complete confidence.',
        icon: 'tabler:clock',
      },
      {
        title: 'Regular Service',
        description: 'Consistent 4 or 8-week cleaning schedules keep your windows looking their best year-round. No contracts required.',
        icon: 'tabler:calendar',
      },
      {
        title: 'Local Expertise',
        description: 'Somerset-based team understands local weather conditions and property types. Personal service you can rely on.',
        icon: 'tabler:map-pin',
      },
    ]}
  />

  <!-- Our Process -->
  <WidgetWrapper>
    <section class="py-12 max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Our Professional Window Cleaning Process</h2>
        <p class="text-lg text-gray-600">Consistent, reliable service you can count on</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-100 text-center">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l4-4 4 4m0 6l-4 4-4-4"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-3 text-gray-900">1. Arrival & Setup</h3>
          <p class="text-gray-600 text-sm">Text notification before arrival. Professional uniformed team with ID badges and fully equipped van.</p>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-100 text-center">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-3 text-gray-900">2. Pure Water Clean</h3>
          <p class="text-gray-600 text-sm">Thorough cleaning with pure water system. Windows, frames, sills and door glass cleaned to perfection.</p>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-100 text-center">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-3 text-gray-900">3. Quality Check</h3>
          <p class="text-gray-600 text-sm">Final inspection to ensure every window meets our high standards. Touch-ups if needed.</p>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-100 text-center">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-3 text-gray-900">4. Payment & Next Visit</h3>
          <p class="text-gray-600 text-sm">Simple payment options. Next visit automatically scheduled or arranged at your convenience.</p>
        </div>
      </div>
    </section>
  </WidgetWrapper>

  <!-- Service Areas -->
  <WidgetWrapper>
    <section class="py-12 max-w-6xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">Window Cleaning Across Somerset</h2>
      <div class="grid md:grid-cols-4 gap-6">
        <div class="text-center">
          <h3 class="font-semibold mb-3 text-blue-600">North Somerset</h3>
          <ul class="text-sm text-gray-600 space-y-1">
            <li>Cheddar</li>
            <li>Axbridge</li>
            <li>Banwell</li>
            <li>Clevedon</li>
            <li>Weston-Super-Mare</li>
            <li>Winscombe</li>
            <li>Yatton</li>
          </ul>
        </div>
        <div class="text-center">
          <h3 class="font-semibold mb-3 text-blue-600">Central Somerset</h3>
          <ul class="text-sm text-gray-600 space-y-1">
            <li>Bridgwater</li>
            <li>Burnham-on-Sea</li>
            <li>Highbridge</li>
            <li>Taunton</li>
            <li>Wedmore</li>
          </ul>
        </div>
        <div class="text-center">
          <h3 class="font-semibold mb-3 text-blue-600">Mendip & Wells</h3>
          <ul class="text-sm text-gray-600 space-y-1">
            <li>Wells</li>
            <li>Glastonbury</li>
            <li>Street</li>
            <li>Shepton Mallet</li>
            <li>Meare</li>
            <li>Radstock</li>
            <li>Frome</li>
          </ul>
        </div>
        <div class="text-center">
          <h3 class="font-semibold mb-3 text-blue-600">South Somerset</h3>
          <ul class="text-sm text-gray-600 space-y-1">
            <li>Yeovil</li>
            <li>Chard</li>
            <li>Crewkerne</li>
            <li>Ilminster</li>
            <li>Langport</li>
            <li>Somerton</li>
            <li>Castle Cary</li>
            <li>Bruton</li>
            <li>Wincanton</li>
          </ul>
        </div>
      </div>
    </section>
  </WidgetWrapper>

  <!-- FAQs -->
  <FAQs
    title="Window Cleaning Questions"
    subtitle="Everything you need to know about our professional window cleaning service"
    items={[
      {
        title: 'How often should windows be cleaned?',
        description: 'Most homes benefit from window cleaning every 4-8 weeks. Frequency depends on your location, surrounding trees, and personal preference. We can recommend the best schedule for your property.',
      },
      {
        title: 'Do you clean windows in all weather?',
        description: 'Light rain doesn\'t affect our pure water system - your windows will still dry streak-free. We only postpone cleaning in heavy rain or dangerous weather conditions for safety.',
      },
      {
        title: 'What is pure water window cleaning?',
        description: 'Pure water has all minerals and impurities removed through filtration. This allows it to naturally attract dirt and dry completely clear without leaving spots or streaks.',
      },
      {
        title: 'Do I need to be home when you clean?',
        description: 'No, you don\'t need to be home. Our exterior cleaning service doesn\'t require property access. We\'ll text you when we arrive and when we\'ve finished.',
      },
      {
        title: 'Are you fully insured?',
        description: 'Yes, we carry full public liability insurance and all our team members are trained professionals. Your property and our workers are fully protected.',
      },
      {
        title: 'What if I\'m not satisfied with the cleaning?',
        description: 'We offer a 48-hour spot-free guarantee. If you notice any issues within 48 hours, contact us and we\'ll return to address them at no charge.',
      },
      {
        title: 'How do I get a quote?',
        description: 'Contact us by phone, WhatsApp, or through our online form. We can often provide quotes over the phone or arrange a quick free assessment of your property.',
      },
      {
        title: 'Do you offer one-off cleans?',
        description: 'Yes, we provide both regular scheduled cleaning and one-off services. Many customers start with a one-off clean and then join our regular service.',
      },
    ]}
  />

  <!-- Strong CTA -->
  <CallToAction
    actions={[
      { variant: 'primary', text: 'Get Free Quote', href: '/booking-2step', icon: 'tabler:calculator' },
      { variant: 'whatsapp', text: 'WhatsApp Quote', href: 'https://wa.me/447415526331?text=Hi%20Somerset%20Window%20Cleaning%2C%20I%27d%20like%20a%20quote%20for%20window%20cleaning%20at%20%5Byour%20address%5D', icon: 'tabler:brand-whatsapp' },
      { text: 'Call 01458 860339', href: 'tel:01458860339', icon: 'tabler:phone' },
    ]}
  >
    <Fragment slot="title">
      Ready for Crystal Clear Windows?
    </Fragment>
    <Fragment slot="subtitle">
      Join thousands of satisfied Somerset customers. Professional window cleaning with pure water technology, fully insured, and guaranteed streak-free results.
    </Fragment>
  </CallToAction>
</Layout>