---
import Layout from '~/layouts/PageLayout.astro';
import ServiceHero from '~/components/widgets/ServiceHero.astro';
import ServiceFeatures from '~/components/widgets/ServiceFeatures.astro';
import Features2 from '~/components/widgets/Features2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import HeroImage from '~/components/common/HeroImage.astro';
import windowCleaningHero from '~/assets/images/services/Image.jpg';
import LiveReviews from '~/components/widgets/LiveReviews.astro';
import ServiceSchema from '~/components/seo/ServiceSchema.astro';
import ReviewsSchema from '~/components/seo/ReviewsSchema.astro';
import PostcodeChecker from '~/components/widgets/PostcodeChecker.astro';

const metadata = {
  title: 'Professional Window Cleaning Somerset | Pure Water System | Somerset Window Cleaning',
  description: 'Professional residential window cleaning across Somerset. Pure water reach-and-wash system for streak-free results. Frames & sills included. Fully insured service.',
};
---

<Layout metadata={metadata} structuredDataType="service">
  <!-- Enhanced Hero Section with Water Droplet Effects -->
  <ServiceHero
    serviceType="window"
    actions={[
      { variant: 'primary', text: 'Get Free Quote', href: '/book-online', icon: 'tabler:file-text', class: 'text-white text-lg px-8 py-4 animate-pulse shadow-2xl transform hover:scale-110 transition-all duration-300' },
      { variant: 'secondary', text: 'Call 01458 860339', href: 'tel:01458860339', icon: 'tabler:phone', class: 'text-white text-lg px-6 py-4 border-2 border-primary hover:bg-primary/15 transition-all duration-300' },
      { variant: 'whatsapp', text: 'WhatsApp', href: 'https://wa.me/447415526331?text=Hi%20Somerset%20Window%20Cleaning%2C%20please%20can%20I%20get%20a%20quote%20for%20window%20cleaning%20at%20%5Byour%20address%5D', icon: 'tabler:brand-whatsapp', class: 'text-white text-lg px-6 py-4', target: '_blank' },
    ]}
  >
    <Fragment slot="title">
      <span style="color: #D84040 !important;">Professional</span> Window Cleaning <span style="color: #D84040 !important;">Somerset</span>
    </Fragment>
    <Fragment slot="subtitle">
      Sparkling clean windows with guaranteed streak-free results. Safe, professional service with minimal ladder use. Perfect for all window types and heights.
    </Fragment>
    <Fragment slot="bg">
      <HeroImage
        src={windowCleaningHero}
        alt="Professional window cleaning technician using pure water system on residential windows - Somerset Window Cleaning"
        width={1920}
        height={1080}
        priority={true}
        sizes="100vw"
        widths={[640, 768, 1024, 1280, 1600, 1920]}
        class="absolute inset-0"
      />
    </Fragment>
  </ServiceHero>

  <!-- Trust Stats -->
  <Stats
    title="Trusted by Somerset Families"
    stats={[
      { title: 'Happy Customers', amount: '4,000+', description: 'Across Somerset' },
      { title: 'Years Experience', amount: '7+', description: 'Since 2019' },
      { title: 'Guarantee', amount: '48hr', description: 'Spot-free promise' },
      { title: 'Google Rating', amount: '4.9★', description: 'Customer reviews' },
    ]}
  />



  <!-- Key Benefits -->
  <ServiceFeatures
    id="benefits"
    title="The Somerset Window Cleaning Difference"
    subtitle="Why thousands of Somerset homeowners trust us with their windows"
    columns={3}
    items={[
      {
        title: 'Pure Water System',
        description: 'Advanced filtration removes all minerals for naturally streak-free drying. No chemicals, no residue, just spotless results.',
        icon: 'tabler:droplet',
      },
      {
        title: 'Ground Level Safety',
        description: 'Our reach-and-wash poles minimize ladder use for upper floors - safer for your property with reduced risk of damage or accidents.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Frames & Sills Included',
        description: 'Complete window cleaning service includes frames, sills and door glass as standard - not just the glass.',
        icon: 'tabler:home',
      },
      {
        title: '48-Hour Guarantee',
        description: 'If spots appear within 48 hours, we\'ll return free of charge. We stand behind our work with complete confidence.',
        icon: 'tabler:clock',
      },
      {
        title: 'Regular Service',
        description: 'Consistent 4 or 8-week cleaning schedules keep your windows looking their best year-round. No contracts required.',
        icon: 'tabler:calendar',
      },
      {
        title: 'Local Expertise',
        description: 'Somerset-based team understands local weather conditions and property types. Personal service you can rely on.',
        icon: 'tabler:map-pin',
      },
    ]}
  />





  <!-- FAQs -->
  <FAQs
    title="Frequently Asked Questions"
    subtitle="Common questions about our professional window cleaning service"
    items={[
      {
        title: 'What cleaning frequency do you recommend?',
        description: 'Most residential customers choose a 4-weekly service schedule, which maintains consistently clean windows year-round. For properties in quieter locations with less exposure to traffic and pollutants, an 8-weekly schedule often suffices. <a href="/book-online" class="text-custom-red hover:underline font-semibold">Contact us to discuss the best schedule for your property</a>.',
      },
      {
        title: 'Will rain affect freshly cleaned windows?',
        description: 'Our pure water system ensures rain will not leave spots or streaks on clean windows. The filtered water leaves no residue, so rainwater simply sheets off without marking. We only reschedule services if weather conditions are unsafe for our team.',
      },
      {
        title: 'Why do you use pure water instead of detergents?',
        description: 'Traditional cleaning products leave microscopic residue that attracts dirt more quickly. Our pure water system removes all minerals and contaminants, leaving windows completely clean without any residue. This results in longer-lasting cleanliness and streak-free drying.',
      },
      {
        title: 'Do you need access to my property?',
        description: 'No access is required as we clean all windows from the outside using reach-and-wash equipment. We\'ll send you notification messages when we arrive and complete the work. Most customers can continue with their normal routine undisturbed.',
      },
      {
        title: 'What sets Somerset Window Cleaning apart?',
        description: 'We maintain reliable service schedules, carry full insurance coverage, and stand behind our work with a 48-hour quality guarantee. Our team takes pride in delivering consistent, professional results you can depend on.',
      },
      {
        title: 'What are the benefits of professional window cleaning?',
        description: 'Professional cleaning eliminates safety risks, ensures streak-free results, and saves you time for more important activities. Regular maintenance keeps your windows looking their best while protecting your property\'s appearance and value.',
      },
      {
        title: 'How soon can you begin service?',
        description: 'New customers are typically scheduled within one week of booking. We organize our routes efficiently by area to provide reliable service while minimizing environmental impact. <a href="/book-online" class="text-custom-red hover:underline font-semibold">Check availability in your area</a>.',
      },
      {
        title: 'Do you offer one-time cleaning services?',
        description: 'Yes, we provide one-off cleaning for special occasions, property moves, or seasonal deep cleans. There\'s no obligation to continue with regular service, though many customers find the convenience and results encourage them to maintain ongoing cleaning schedules.',
      },
    ]}
  />

  <!-- Google Reviews -->
  <LiveReviews />
  
  <!-- Service-specific structured data -->
  <ServiceSchema
    serviceName="Professional Window Cleaning"
    serviceDescription="Professional residential and commercial window cleaning using pure water reach-and-wash system for streak-free results. Includes frames and sills."
    duration="PT30M"
    serviceType="Window Cleaning"
    features={[
      'Pure Water System',
      'Streak-Free Results',
      'Frames & Sills Included',
      'Eco-Friendly Cleaning',
      '48-Hour Guarantee',
      'No Contracts Required'
    ]}
    certifications={[
      'Fully Insured',
      'Public Liability £2M',
      'Working at Height Certified',
      'Professional Equipment'
    ]}
    faqs={[
      {
        question: 'How often should I have my windows cleaned?',
        answer: 'We recommend cleaning residential windows every 4-8 weeks and commercial windows every 2-4 weeks to maintain clarity and prevent damage from dirt buildup.'
      },
      {
        question: 'Do I need to be home during the window cleaning?',
        answer: 'No, you don\'t need to be home for external window cleaning. We can clean the outside of your windows while you\'re out. For internal cleaning, we\'ll arrange a convenient time.'
      },
      {
        question: 'What is the pure water system?',
        answer: 'Our pure water system uses deionized water that dries without leaving spots or streaks. It\'s eco-friendly, requires no chemicals, and allows us to clean windows safely from the ground.'
      }
    ]}
  />
  
  <!-- Postcode Checker -->
  <PostcodeChecker 
    heading="Ready for sparkling clean windows?"
    subheading="Check if we cover your area and book your window cleaning service today"
    buttonText="Check My Area"
  />
  
  <!-- Reviews structured data -->
  <ReviewsSchema
    itemReviewed={{
      type: 'Service',
      name: 'Window Cleaning Service',
      description: 'Professional window cleaning service in Somerset'
    }}
  />

</Layout>