---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';

const metadata = {
  title: 'Window Cleaning Glastonbury | Professional Service | Somerset Window Cleaning',
  description: 'Professional window cleaning in Glastonbury and surrounding areas. Serving the historic town of Glastonbury with reliable, insured service. BA6 postcode coverage.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    actions={[
      { variant: 'primary', text: 'Book Now', href: '/book-now?postcode=BA6', icon: 'tabler:calendar-plus' },
      { text: 'Call 01458 860339', href: 'tel:01458860339', icon: 'tabler:phone' },
    ]}
  >
    <Fragment slot="title">
      Window Cleaning in <span class="text-accent">Glastonbury</span>
    </Fragment>
    <Fragment slot="subtitle">
      Professional window cleaning for Glastonbury's historic town and surrounding areas. Trusted local service with 48-hour guarantee.
    </Fragment>
  </Hero>

  <!-- Local Area Info -->
  <WidgetWrapper>
    <section class="py-12 max-w-6xl mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12">
        <div>
          <h2 class="text-3xl font-bold mb-6">Glastonbury Window Cleaning</h2>
          <div class="space-y-4 text-gray-600">
            <p>We provide professional window cleaning throughout Glastonbury and the surrounding areas, including:</p>
            <div class="grid grid-cols-2 gap-2 text-sm">
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span>Glastonbury Town</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span>Beckery</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span>Chilkwell Street</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span>Benedict Street</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span>Street Road</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span>Wirral Park</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span>West Pennard</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span>Meare</span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-100">
          <h3 class="text-xl font-bold mb-4">Glastonbury Prices</h3>
          <div class="space-y-3">
            <div class="flex justify-between items-center">
              <span>2-bed terraced house</span>
              <span class="font-semibold text-primary">From £16</span>
            </div>
            <div class="flex justify-between items-center">
              <span>3-bed semi-detached</span>
              <span class="font-semibold text-primary">From £23</span>
            </div>
            <div class="flex justify-between items-center">
              <span>4-bed family home</span>
              <span class="font-semibold text-primary">From £33</span>
            </div>
            <div class="flex justify-between items-center">
              <span>Period property</span>
              <span class="font-semibold text-primary">From £42</span>
            </div>
            <div class="border-t pt-3 mt-3">
              <div class="text-sm text-gray-600 space-y-1">
                <div class="flex justify-between">
                  <span>Gutter clearing</span>
                  <span>+£28-£55</span>
                </div>
                <div class="flex justify-between">
                  <span>Conservatory roof</span>
                  <span>+£38-£75</span>
                </div>
              </div>
            </div>
          </div>
          <div class="mt-6">
            <a href="/instant-quote" class="w-full btn-primary text-center block">Get Instant Quote</a>
          </div>
        </div>
      </div>
    </section>
  </WidgetWrapper>

  <!-- Services for Glastonbury -->
  <Features
    id="glastonbury-services"
    title="Glastonbury Window Cleaning Services"
    subtitle="Professional cleaning for historic and modern properties"
    items={[
      {
        title: 'Historic Town Centre',
        description: 'Careful cleaning of properties around Glastonbury High Street and Abbey grounds.',
        icon: 'tabler:building-monument',
      },
      {
        title: 'Festival Town Specialists',
        description: 'Regular cleaning before and after festival season for local properties and businesses.',
        icon: 'tabler:music',
      },
      {
        title: 'Rural Properties',
        description: 'Farmhouses and countryside homes in surrounding villages like West Pennard and Meare.',
        icon: 'tabler:home-2',
      },
      {
        title: 'Tourist Businesses',
        description: 'B&Bs, cafes and shops catering to Glastonbury\'s many visitors.',
        icon: 'tabler:building-store',
      },
      {
        title: 'Spiritual Centres',
        description: 'Retreat centres, shops and venues around Glastonbury\'s spiritual community.',
        icon: 'tabler:om',
      },
      {
        title: 'Local Expertise',
        description: 'Understanding Glastonbury\'s unique character and seasonal cleaning needs.',
        icon: 'tabler:map-pin',
      },
    ]}
  />

  <!-- Local Testimonials -->
  <Testimonials
    title="Glastonbury customer reviews"
    testimonials={[
      {
        testimonial: 'Perfect for our B&B. They understand the importance of presentation for our guests.',
        name: 'Helen K.',
        job: 'Glastonbury',
        rating: 5,
      },
      {
        testimonial: 'Great service for our shop on the High Street. Always professional and reliable.',
        name: 'Michael D.',
        job: 'Glastonbury High Street',
        rating: 5,
      },
      {
        testimonial: 'Regular cleaning for our farmhouse. They\'re flexible with rural access and timing.',
        name: 'Jane F.',
        job: 'West Pennard',
        rating: 5,
      },
    ]}
  />

  <!-- CTA -->
  <CallToAction
    actions={[
      { variant: 'primary', text: 'Book Glastonbury Service', href: '/book-now?postcode=BA6', icon: 'tabler:calendar-plus' },
      { text: 'Call 01458 860339', href: 'tel:01458860339', icon: 'tabler:phone' },
    ]}
  >
    <Fragment slot="title">
      Crystal-clear windows for Glastonbury
    </Fragment>
    <Fragment slot="subtitle">
      Professional window cleaning service for the historic town. Book online and get instant pricing.
    </Fragment>
  </CallToAction>
</Layout>

