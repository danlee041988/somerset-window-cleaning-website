---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';

const metadata = {
  title: 'Window Cleaning Wells | Local Professional Service | Somerset Window Cleaning',
  description: 'Professional window cleaning in Wells and surrounding villages. Fully insured, reliable service for England\'s smallest city. Serving Wells BA5 postcode.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    actions={[
      { variant: 'primary', text: 'Get Instant Quote', href: '/instant-quote', icon: 'tabler:calculator' },
      { text: 'Call 01458 860339', href: 'tel:01458860339', icon: 'tabler:phone' },
    ]}
  >
    <Fragment slot="title">
      Window Cleaning in <span class="text-accent">Wells</span>
    </Fragment>
    <Fragment slot="subtitle">
      Professional window cleaning for England's smallest city. Trusted by local families and businesses with our 48-hour guarantee.
    </Fragment>
  </Hero>

  <!-- Local Area Info -->
  <WidgetWrapper>
    <section class="py-12 max-w-6xl mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12">
        <div>
          <h2 class="text-3xl font-bold mb-6">Wells Window Cleaning Services</h2>
          <div class="space-y-4 text-gray-600">
            <p>We're proud to serve Wells, England's smallest city, with professional window cleaning services. Our local team covers the historic city centre and surrounding villages, serving properties near iconic landmarks including:</p>
            <div class="bg-blue-50 rounded-lg p-4 mb-4">
              <h4 class="font-semibold text-blue-900 mb-2">⛪ Historic Wells Landmarks We Serve</h4>
              <ul class="text-sm text-blue-800 space-y-1">
                <li>• Wells Cathedral and Bishop's Palace</li>
                <li>• Vicar's Close (the oldest residential street in Europe)</li>
                <li>• Wells Market Place and Town Hall</li>
                <li>• Wells Recreation Ground</li>
                <li>• Blue School and Wells Cathedral School</li>
                <li>• Tor and surrounding countryside properties</li>
              </ul>
            </div>
            <p>Our service coverage includes all areas of Wells BA5 and nearby villages:</p>
            <div class="grid grid-cols-2 gap-2 text-sm">
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span>Wells City Centre</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span>Southover</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span>Tor</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span>Wookey Hole</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span>St Cuthbert Out</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span>Dulcote</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span>Coxley</span>
              </div>
              <div class="flex items-center space-x-2">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span>Easton</span>
              </div>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-100">
          <h3 class="text-xl font-bold mb-4">Wells Window Cleaning Prices</h3>
          <div class="space-y-3">
            <div class="flex justify-between items-center">
              <span>2-bed cottage</span>
              <span class="font-semibold text-primary">From £15</span>
            </div>
            <div class="flex justify-between items-center">
              <span>3-bed semi-detached</span>
              <span class="font-semibold text-primary">From £22</span>
            </div>
            <div class="flex justify-between items-center">
              <span>4-bed family home</span>
              <span class="font-semibold text-primary">From £32</span>
            </div>
            <div class="flex justify-between items-center">
              <span>Period property</span>
              <span class="font-semibold text-primary">From £40</span>
            </div>
            <div class="border-t pt-3 mt-3">
              <div class="text-sm text-gray-600 space-y-1">
                <div class="flex justify-between">
                  <span>Gutter clearing</span>
                  <span>+£25-£50</span>
                </div>
                <div class="flex justify-between">
                  <span>Conservatory roof</span>
                  <span>+£35-£70</span>
                </div>
              </div>
            </div>
          </div>
          <div class="mt-6">
            <a href="/instant-quote" class="w-full btn-primary text-center block">Get Instant Quote</a>
          </div>
        </div>
      </div>
    </section>
  </WidgetWrapper>

  <!-- Services for Wells -->
  <Features
    id="wells-services"
    title="Wells Window Cleaning Specialists"
    subtitle="Professional cleaning for historic properties and modern homes"
    items={[
      {
        title: 'Historic Properties',
        description: 'Careful cleaning of period windows around Wells Cathedral and historic city centre.',
        icon: 'tabler:building-church',
      },
      {
        title: 'Rural Properties',
        description: 'Farmhouses and rural homes in surrounding villages like Wookey Hole and Dulcote.',
        icon: 'tabler:home-2',
      },
      {
        title: 'Local Businesses',
        description: 'Shops, cafes and businesses in Wells high street and market place.',
        icon: 'tabler:building-store',
      },
      {
        title: 'Holiday Cottages',
        description: 'Regular cleaning for holiday lets and second homes in the Wells area.',
        icon: 'tabler:building-cottage',
      },
      {
        title: 'Conservation Areas',
        description: 'Experience working within Wells\' conservation area requirements.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Local Knowledge',
        description: 'Based locally - we understand Wells\' unique property types and requirements.',
        icon: 'tabler:map-pin',
      },
    ]}
  />

  <!-- Local Testimonials -->
  <Testimonials
    title="What Wells customers say"
    testimonials={[
      {
        testimonial: 'Excellent service for our period cottage. They take real care with the original windows.',
        name: 'Margaret T.',
        job: 'Wells',
        rating: 5,
      },
      {
        testimonial: 'Reliable team, always on time. Perfect for our holiday cottage bookings.',
        name: 'David L.',
        job: 'Wookey Hole',
        rating: 5,
      },
      {
        testimonial: 'Professional window cleaning for our Wells business. Highly recommend their commercial service.',
        name: 'Anna S.',
        job: 'Wells High Street',
        rating: 5,
      },
    ]}
  />

  <!-- CTA -->
  <CallToAction
    actions={[
      { variant: 'primary', text: 'Book Wells Window Cleaning', href: '/instant-quote', icon: 'tabler:calculator' },
      { text: 'Call 01458 860339', href: 'tel:01458860339', icon: 'tabler:phone' },
    ]}
  >
    <Fragment slot="title">
      Ready for spotless windows in Wells?
    </Fragment>
    <Fragment slot="subtitle">
      Local, reliable window cleaning service. Get your instant quote and book online today.
    </Fragment>
  </CallToAction>
</Layout>

