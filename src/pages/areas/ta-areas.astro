---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';

const metadata = {
  title: 'Window Cleaning TA Postcodes | Taunton & Somerset Areas | Somerset Window Cleaning',
  description: 'Professional window cleaning across all TA postcode areas including Taunton, Bridgwater, Wellington, Chard, Ilminster. Covering TA1-TA24 throughout Somerset.',
};

// TA postcode areas we cover
const taPostcodes = [
  { code: 'TA1', area: 'Taunton (Central), County Hall area', major: true },
  { code: 'TA2', area: 'Taunton (North), Priorswood, Staplegrove', major: true },
  { code: 'TA3', area: 'Taunton (South), Trull, Comeytrowe', major: true },
  { code: 'TA4', area: 'Taunton (West), Wellington Road, Wiveliscombe', major: true },
  { code: 'TA6', area: 'Bridgwater (Town), Wembdon, Chilton Trinity', major: true },
  { code: 'TA7', area: 'Bridgwater (Rural), North Petherton, Woolavington', major: false },
  { code: 'TA8', area: 'Burnham-on-Sea, Berrow, Brean', major: true },
  { code: 'TA9', area: 'Highbridge, Brent Knoll, East Huntspill', major: true },
  { code: 'TA10', area: 'Langport, Huish Episcopi, Long Sutton', major: false },
  { code: 'TA11', area: 'Somerton, Long Load, Kingsdon', major: false },
  { code: 'TA12', area: 'Martock, Ash, South Petherton', major: false },
  { code: 'TA13', area: 'South Petherton, Lopen, Shepton Beauchamp', major: false },
  { code: 'TA14', area: 'Stoke-sub-Hamdon, Norton-sub-Hamdon', major: false },
  { code: 'TA18', area: 'Crewkerne, Merriott, Misterton', major: true },
  { code: 'TA19', area: 'Ilminster, Horton, Whitelackington', major: true },
  { code: 'TA20', area: 'Chard, Tatworth, Forton', major: true },
  { code: 'TA21', area: 'Wellington, Rockwell Green, Nynehead', major: true },
  { code: 'TA24', area: 'Dulverton, Exmoor (limited coverage)', major: false },
];
---

<Layout metadata={metadata}>
  <!-- Hero Widget -->
  <Hero
    actions={[
      { variant: 'primary', text: 'Book Now', href: '/book-now', icon: 'tabler:calendar-plus' },
      { text: 'Call 01458 860339', href: 'tel:01458860339', icon: 'tabler:phone' },
    ]}
  >
    <Fragment slot="title">
      Window Cleaning <span class="text-accent">TA Postcode Areas</span>
    </Fragment>
    <Fragment slot="subtitle">
      Professional window cleaning across Taunton & Somerset TA postcodes. From the county town to the Blackdown Hills, we cover TA1 through TA24.
    </Fragment>
  </Hero>

  <!-- Coverage Overview -->
  <WidgetWrapper>
    <section class="py-12 max-w-7xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">TA Postcode Coverage</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Our TA area coverage spans from Somerset's county town of Taunton to the coastal resorts, from market towns to rural villages across the beautiful Somerset countryside.
        </p>
      </div>

      <!-- Major Towns Grid -->
      <div class="mb-12">
        <h3 class="text-2xl font-bold text-center mb-6">Major Towns We Serve</h3>
        <div class="grid md:grid-cols-3 lg:grid-cols-4 gap-4 max-w-5xl mx-auto">
          <div class="bg-primary/10 text-center p-4 rounded-lg border border-primary/20">
            <h4 class="font-bold text-lg">Taunton</h4>
            <p class="text-sm text-gray-600">TA1-4 • County town</p>
          </div>
          <div class="bg-primary/10 text-center p-4 rounded-lg border border-primary/20">
            <h4 class="font-bold text-lg">Bridgwater</h4>
            <p class="text-sm text-gray-600">TA6-7 • Historic port</p>
          </div>
          <div class="bg-primary/10 text-center p-4 rounded-lg border border-primary/20">
            <h4 class="font-bold text-lg">Wellington</h4>
            <p class="text-sm text-gray-600">TA21 • Market town</p>
          </div>
          <div class="bg-primary/10 text-center p-4 rounded-lg border border-primary/20">
            <h4 class="font-bold text-lg">Chard</h4>
            <p class="text-sm text-gray-600">TA20 • Highest town</p>
          </div>
          <div class="bg-primary/10 text-center p-4 rounded-lg border border-primary/20">
            <h4 class="font-bold text-lg">Ilminster</h4>
            <p class="text-sm text-gray-600">TA19 • Minster town</p>
          </div>
          <div class="bg-primary/10 text-center p-4 rounded-lg border border-primary/20">
            <h4 class="font-bold text-lg">Crewkerne</h4>
            <p class="text-sm text-gray-600">TA18 • Market town</p>
          </div>
          <div class="bg-primary/10 text-center p-4 rounded-lg border border-primary/20">
            <h4 class="font-bold text-lg">Burnham-on-Sea</h4>
            <p class="text-sm text-gray-600">TA8 • Seaside resort</p>
          </div>
          <div class="bg-primary/10 text-center p-4 rounded-lg border border-primary/20">
            <h4 class="font-bold text-lg">Highbridge</h4>
            <p class="text-sm text-gray-600">TA9 • Market town</p>
          </div>
        </div>
      </div>

      <!-- Complete Postcode List -->
      <div class="bg-gray-50 rounded-xl p-8">
        <h3 class="text-2xl font-bold mb-6">All TA Postcodes We Cover</h3>
        <div class="grid md:grid-cols-2 gap-6">
          {taPostcodes.map((postcode) => (
            <div class={`flex items-start space-x-3 p-3 rounded-lg ${postcode.major ? 'bg-white border border-primary/20' : ''}`}>
              <span class={`font-bold ${postcode.major ? 'text-primary' : 'text-gray-700'} min-w-[50px]`}>
                {postcode.code}
              </span>
              <div class="flex-1">
                <p class="text-gray-700">{postcode.area}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Service Info -->
      <div class="grid lg:grid-cols-2 gap-12 mt-12">
        <div>
          <h3 class="text-2xl font-bold mb-6">Why Choose Us for TA Areas?</h3>
          <div class="space-y-4 text-gray-600">
            <p>With extensive coverage across TA postcodes, we understand the diverse needs of Somerset's communities - from Taunton's busy town centre to the peaceful villages of the Blackdown Hills and Somerset Levels.</p>
            
            <p>Our teams are experienced with everything from modern developments in Taunton to period properties in market towns, coastal properties in Burnham-on-Sea to rural cottages throughout the countryside.</p>

            <div class="bg-blue-50 rounded-lg p-4">
              <h4 class="font-semibold text-blue-900 mb-2">TA Area Expertise</h4>
              <ul class="text-sm text-blue-800 space-y-1">
                <li>• County town experience (Taunton businesses & residences)</li>
                <li>• Coastal property care (Burnham-on-Sea seafront)</li>
                <li>• Market town specialists (Wellington, Chard, Ilminster)</li>
                <li>• Rural access capability (Somerset Levels villages)</li>
                <li>• Commercial expertise (Bridgwater industrial areas)</li>
              </ul>
            </div>
          </div>
        </div>

        <div>
          <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-100">
            <h3 class="text-xl font-bold mb-4">Quick Quote Calculator</h3>
            <p class="text-gray-600 mb-4">Typical prices for TA postcode areas:</p>
            <div class="space-y-3">
              <div class="flex justify-between items-center py-2 border-b">
                <span>2-bed terrace/flat</span>
                <span class="font-semibold text-primary">From £16</span>
              </div>
              <div class="flex justify-between items-center py-2 border-b">
                <span>3-bed semi-detached</span>
                <span class="font-semibold text-primary">From £22</span>
              </div>
              <div class="flex justify-between items-center py-2 border-b">
                <span>4-bed detached</span>
                <span class="font-semibold text-primary">From £32</span>
              </div>
              <div class="flex justify-between items-center py-2 border-b">
                <span>Large/rural property</span>
                <span class="font-semibold text-primary">From £42</span>
              </div>
            </div>
            <p class="text-sm text-gray-500 mt-3">* Prices vary by location and property type</p>
            <div class="mt-6 space-y-3">
              <a href="/book-now" class="block w-full text-center bg-primary text-white font-bold py-3 px-6 rounded-lg hover:bg-primary/90 transition-colors">
                Get Your Exact Quote
              </a>
              <a href="tel:01458860339" class="block w-full text-center bg-gray-100 text-gray-800 font-bold py-3 px-6 rounded-lg hover:bg-gray-200 transition-colors">
                Call 01458 860339
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </WidgetWrapper>

  <!-- Services -->
  <Features
    id="ta-services"
    title="Services Available in TA Postcodes"
    subtitle="Complete exterior cleaning solutions across Taunton & Somerset"
    items={[
      {
        title: 'Residential Window Cleaning',
        description: 'Regular service for all property types. From town centre flats to rural farmhouses, we cover it all.',
        icon: 'tabler:home',
      },
      {
        title: 'Commercial Window Cleaning',
        description: 'Professional service for businesses, shops, and offices. Flexible scheduling to suit your needs.',
        icon: 'tabler:building',
      },
      {
        title: 'Gutter Clearing',
        description: 'Essential maintenance for Somerset properties. Our high-reach system safely clears all debris.',
        icon: 'tabler:tool',
      },
      {
        title: 'Complete Exterior Care',
        description: 'Conservatory cleaning, fascia & soffits, solar panels - we maintain every aspect of your property.',
        icon: 'tabler:sparkles',
      },
    ]}
  />

  <!-- Final CTA -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Book Your TA Postcode',
        href: '/book-now',
        icon: 'tabler:calendar-plus',
      },
    ]}
  >
    <Fragment slot="title">
      Ready for <span class="text-accent">Professional Window Cleaning</span> in Your TA Postcode?
    </Fragment>
    <Fragment slot="subtitle">
      Join thousands of satisfied customers across Taunton & Somerset. Professional service with a 48-hour guarantee.
    </Fragment>
  </CallToAction>

  <!-- Structured Data for Local SEO -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "Window Cleaning TA Postcodes",
    "provider": {
      "@type": "LocalBusiness",
      "name": "Somerset Window Cleaning",
      "telephone": "01458860339",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Street",
        "addressRegion": "Somerset",
        "postalCode": "BA16 0HW",
        "addressCountry": "GB"
      }
    },
    "areaServed": [
      "TA1", "TA2", "TA3", "TA4", "TA6", "TA7", "TA8", "TA9", "TA10", 
      "TA11", "TA12", "TA13", "TA14", "TA18", "TA19", "TA20", "TA21", "TA24"
    ].map(postcode => ({
      "@type": "PostalAddress",
      "postalCode": postcode,
      "addressCountry": "GB"
    })),
    "url": "https://somersetwindowcleaning.co.uk/areas/ta-areas",
    "description": "Professional window cleaning service covering all TA postcode areas in Taunton and Somerset."
  })} />
</Layout>