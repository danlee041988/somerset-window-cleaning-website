---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';

const metadata = {
  title: 'Window Cleaning BA Postcodes | Bath & Somerset Areas | Somerset Window Cleaning',
  description: 'Professional window cleaning across all BA postcode areas including Wells, Glastonbury, Street, Yeovil, Frome, Shepton Mallet. Covering BA3-BA11, BA16, BA20-BA22 and DT9.',
};

// BA postcode areas we cover
const baPostcodes = [
  { code: 'BA3', area: 'Radstock, Midsomer Norton, Westfield', major: false },
  { code: 'BA4', area: 'Shepton Mallet, Croscombe, Pilton', major: true },
  { code: 'BA5', area: 'Wells, Coxley, Haybridge', major: true },
  { code: 'BA6', area: 'Glastonbury, West Pennard, Butleigh', major: true },
  { code: 'BA7', area: 'Castle Cary, Ansford, Sparkford', major: false },
  { code: 'BA8', area: 'Templecombe, Henstridge, Stalbridge', major: false },
  { code: 'BA9', area: 'Wincanton, Charlton Musgrove, Stoke Trister', major: false },
  { code: 'BA10', area: 'Bruton, Pitcombe, Cole', major: false },
  { code: 'BA11', area: 'Frome, Beckington, Rode', major: true },
  { code: 'BA16', area: 'Street, Walton, Ashcott', major: true },
  { code: 'BA20', area: 'Yeovil (West), Brympton, Alvington', major: true },
  { code: 'BA21', area: 'Yeovil (Central), Preston Plucknett', major: true },
  { code: 'BA22', area: 'Yeovil (East), Mudford, Marston Magna', major: true },
  { code: 'DT9', area: 'Sherborne, Milborne Port, Thornford', major: true },
];
---

<Layout metadata={metadata}>
  <!-- Hero Widget -->
  <Hero
    actions={[
      { variant: 'primary', text: 'Book Now', href: '/book-now', icon: 'tabler:calendar-plus' },
      { text: 'Call 01458 860339', href: 'tel:01458860339', icon: 'tabler:phone' },
    ]}
  >
    <Fragment slot="title">
      Window Cleaning <span class="text-accent">BA Postcode Areas</span>
    </Fragment>
    <Fragment slot="subtitle">
      Professional window cleaning across Bath & Somerset BA postcodes. From historic Wells to bustling Yeovil, we cover BA3 through BA22 plus Sherborne (DT9).
    </Fragment>
  </Hero>

  <!-- Coverage Overview -->
  <WidgetWrapper>
    <section class="py-12 max-w-7xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">BA Postcode Coverage</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Our BA area coverage spans from the Mendip Hills to South Somerset, serving historic cities, market towns, and picturesque villages across the region.
        </p>
      </div>

      <!-- Major Towns Grid -->
      <div class="mb-12">
        <h3 class="text-2xl font-bold text-center mb-6">Major Towns We Serve</h3>
        <div class="grid md:grid-cols-3 lg:grid-cols-4 gap-4 max-w-5xl mx-auto">
          <div class="bg-primary/10 text-center p-4 rounded-lg border border-primary/20">
            <h4 class="font-bold text-lg">Wells (BA5)</h4>
            <p class="text-sm text-gray-600">England's smallest city</p>
          </div>
          <div class="bg-primary/10 text-center p-4 rounded-lg border border-primary/20">
            <h4 class="font-bold text-lg">Glastonbury (BA6)</h4>
            <p class="text-sm text-gray-600">Historic town & Tor</p>
          </div>
          <div class="bg-primary/10 text-center p-4 rounded-lg border border-primary/20">
            <h4 class="font-bold text-lg">Street (BA16)</h4>
            <p class="text-sm text-gray-600">Our home base</p>
          </div>
          <div class="bg-primary/10 text-center p-4 rounded-lg border border-primary/20">
            <h4 class="font-bold text-lg">Yeovil (BA20-22)</h4>
            <p class="text-sm text-gray-600">South Somerset's hub</p>
          </div>
          <div class="bg-primary/10 text-center p-4 rounded-lg border border-primary/20">
            <h4 class="font-bold text-lg">Frome (BA11)</h4>
            <p class="text-sm text-gray-600">Independent market town</p>
          </div>
          <div class="bg-primary/10 text-center p-4 rounded-lg border border-primary/20">
            <h4 class="font-bold text-lg">Shepton Mallet (BA4)</h4>
            <p class="text-sm text-gray-600">Historic market town</p>
          </div>
          <div class="bg-primary/10 text-center p-4 rounded-lg border border-primary/20">
            <h4 class="font-bold text-lg">Sherborne (DT9)</h4>
            <p class="text-sm text-gray-600">Abbey town</p>
          </div>
          <div class="bg-primary/10 text-center p-4 rounded-lg border border-primary/20">
            <h4 class="font-bold text-lg">Castle Cary (BA7)</h4>
            <p class="text-sm text-gray-600">Market town</p>
          </div>
        </div>
      </div>

      <!-- Complete Postcode List -->
      <div class="bg-gray-50 rounded-xl p-8">
        <h3 class="text-2xl font-bold mb-6">All BA Postcodes We Cover</h3>
        <div class="grid md:grid-cols-2 gap-6">
          {baPostcodes.map((postcode) => (
            <div class={`flex items-start space-x-3 p-3 rounded-lg ${postcode.major ? 'bg-white border border-primary/20' : ''}`}>
              <span class={`font-bold ${postcode.major ? 'text-primary' : 'text-gray-700'} min-w-[50px]`}>
                {postcode.code}
              </span>
              <div class="flex-1">
                <p class="text-gray-700">{postcode.area}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Service Info -->
      <div class="grid lg:grid-cols-2 gap-12 mt-12">
        <div>
          <h3 class="text-2xl font-bold mb-6">Why Choose Us for BA Areas?</h3>
          <div class="space-y-4 text-gray-600">
            <p>With our base in Street (BA16), we're perfectly positioned to serve all BA postcode areas efficiently. Our teams know these areas inside out - from the narrow streets of Wells to the business districts of Yeovil.</p>
            
            <p>We understand the unique challenges of each area - limestone buildings in Bath stone areas, period properties in Glastonbury, modern developments in Yeovil, and rural cottages throughout the Mendips.</p>

            <div class="bg-blue-50 rounded-lg p-4">
              <h4 class="font-semibold text-blue-900 mb-2">Local Knowledge Matters</h4>
              <ul class="text-sm text-blue-800 space-y-1">
                <li>• Historic property specialists (Wells, Glastonbury, Frome)</li>
                <li>• Commercial experience (Yeovil business parks)</li>
                <li>• Rural property access (Mendip villages)</li>
                <li>• Scheduled around local events (Glastonbury Festival, Bath & West Show)</li>
                <li>• Weather-aware service (we know when the Levels flood!)</li>
              </ul>
            </div>
          </div>
        </div>

        <div>
          <div class="bg-white rounded-lg shadow-lg p-6 border border-gray-100">
            <h3 class="text-xl font-bold mb-4">Quick Quote Calculator</h3>
            <p class="text-gray-600 mb-4">Typical prices for BA postcode areas:</p>
            <div class="space-y-3">
              <div class="flex justify-between items-center py-2 border-b">
                <span>2-bed terrace/flat</span>
                <span class="font-semibold text-primary">From £15</span>
              </div>
              <div class="flex justify-between items-center py-2 border-b">
                <span>3-bed semi-detached</span>
                <span class="font-semibold text-primary">From £20</span>
              </div>
              <div class="flex justify-between items-center py-2 border-b">
                <span>4-bed detached</span>
                <span class="font-semibold text-primary">From £30</span>
              </div>
              <div class="flex justify-between items-center py-2 border-b">
                <span>5+ bed/large property</span>
                <span class="font-semibold text-primary">From £40</span>
              </div>
            </div>
            <div class="mt-6 space-y-3">
              <a href="/book-now" class="block w-full text-center bg-primary text-white font-bold py-3 px-6 rounded-lg hover:bg-primary/90 transition-colors">
                Get Your Exact Quote
              </a>
              <a href="tel:01458860339" class="block w-full text-center bg-gray-100 text-gray-800 font-bold py-3 px-6 rounded-lg hover:bg-gray-200 transition-colors">
                Call 01458 860339
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </WidgetWrapper>

  <!-- Services -->
  <Features
    id="ba-services"
    title="Services Available in BA Postcodes"
    subtitle="Complete exterior cleaning solutions across Bath & Somerset"
    items={[
      {
        title: 'Residential Window Cleaning',
        description: 'Regular service for homes across all BA areas. Pure water technology ensures streak-free results every time.',
        icon: 'tabler:home',
      },
      {
        title: 'Commercial Window Cleaning',
        description: 'Reliable service for shops, offices, and businesses. Flexible scheduling to suit your needs.',
        icon: 'tabler:building',
      },
      {
        title: 'Gutter Clearing',
        description: 'Essential maintenance using high-reach vacuum systems. Prevent water damage and protect your property.',
        icon: 'tabler:tool',
      },
      {
        title: 'Additional Services',
        description: 'Conservatory cleaning, fascia & soffit cleaning, solar panel cleaning - complete exterior care.',
        icon: 'tabler:sparkles',
      },
    ]}
  />

  <!-- Final CTA -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Book Your BA Postcode',
        href: '/book-now',
        icon: 'tabler:calendar-plus',
      },
    ]}
  >
    <Fragment slot="title">
      Ready for <span class="text-accent">Sparkling Clean Windows</span> in Your BA Postcode?
    </Fragment>
    <Fragment slot="subtitle">
      Join thousands of satisfied customers across Bath & Somerset. Professional service with a 48-hour guarantee.
    </Fragment>
  </CallToAction>

  <!-- Structured Data for Local SEO -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Service",
    "name": "Window Cleaning BA Postcodes",
    "provider": {
      "@type": "LocalBusiness",
      "name": "Somerset Window Cleaning",
      "telephone": "01458860339",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Street",
        "addressRegion": "Somerset",
        "postalCode": "BA16 0HW",
        "addressCountry": "GB"
      }
    },
    "areaServed": [
      "BA3", "BA4", "BA5", "BA6", "BA7", "BA8", "BA9", "BA10", "BA11", 
      "BA16", "BA20", "BA21", "BA22", "DT9"
    ].map(postcode => ({
      "@type": "PostalAddress",
      "postalCode": postcode,
      "addressCountry": "GB"
    })),
    "url": "https://somersetwindowcleaning.co.uk/areas/ba-areas",
    "description": "Professional window cleaning service covering all BA postcode areas in Bath and Somerset."
  })} />
</Layout>