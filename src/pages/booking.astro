    async function submitBooking() {
      try {
        // Ensure additionalServices is an array
        ensureAdditionalServicesArray();
        
        // Validate reCAPTCHA (only if loaded)
        let recaptchaResponse = '';
        if (typeof grecaptcha !== 'undefined') {
          try {
            recaptchaResponse = grecaptcha.getResponse();
            if (!recaptchaResponse) {
              showError('Please complete the reCAPTCHA verification');
              return;
            }
          } catch (e) {
            console.warn('reCAPTCHA not properly loaded:', e);
            // Continue without reCAPTCHA in development
            if (window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1') {
              recaptchaResponse = 'dev-mode-bypass';
            } else {
              showError('Security verification failed. Please refresh the page and try again.');
              return;
            }
          }
        }
        
        // Show loading state
        const submitBtn = document.getElementById('submit-booking');
        const originalText = submitBtn.innerHTML;
        submitBtn.disabled = true;
        submitBtn.innerHTML = 'Submitting...';
        
        // Convert addons object to additionalServices array
        const additionalServices = Object.entries(formData.addons)
          .filter(([_, addon]) => addon.selected)
          .map(([id]) => id);
        
        // Determine proper property type format for API
        let propertyType = formData.propertyType;
        if (formData.isCommercial) {
          propertyType = 'commercial';
        } else if (formData.isBespoke) {
          propertyType = 'custom';
        } else if (formData.bedrooms && formData.propertyType) {
          // Convert to API format (e.g., "3 Beds" + "Detached House" = "detached-3")
          const beds = formData.bedrooms.match(/(\d+)/)?.[1] || '2';
          const type = formData.propertyType.toLowerCase().includes('detached') ? 'detached' :
                      formData.propertyType.toLowerCase().includes('semi') ? 'semi' :
                      formData.propertyType.toLowerCase().includes('terraced') ? 'terrace' :
                      'semi';
          propertyType = `${type}-${beds}`;
        }
        
        // Prepare API data
        const apiData = {
          propertyType: propertyType,
          frequency: formData.frequency || '4weekly',
          additionalServices: additionalServices,
          fullName: formData.details.firstName + ' ' + formData.details.lastName,
          email: formData.details.email,
          phone: formData.details.phone,
          address: formData.details.address,
          city: formData.details.city || 'Somerset',
          postcode: formData.details.postcode,
          contactMethod: 'email',
          preferredDate: formData.details.preferredDate || '',
          notes: formData.details.additionalInfo || '',
          specialOffer: formData.hasGutterDeal ? 'Free window clean with both gutter services' : ''
        };
        
        console.log('Submitting booking data:', apiData);
        
        // Submit to API endpoint
        const response = await fetch('/api/bookings/create', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(apiData)
        });
        
        const result = await response.json();
        
        if (response.ok && result.success) {
          // Success - also try EmailJS as backup notification
          try {
            const emailData = {
              first_name: formData.details.firstName,
              last_name: formData.details.lastName,
              email: formData.details.email,
              phone: formData.details.phone,
              address: formData.details.address,
              postcode: formData.details.postcode,
              property_type: formData.bedrooms + ' ' + formData.propertyType,
              bedrooms: formData.bedrooms,
              frequency: formData.frequency,
              window_cleaning_price: calculateWindowCleaningPrice(),
              addons: additionalServices.map(id => {
                const name = id === 'gutterClearing' ? 'Gutter Clearing' :
                            id === 'fasciaSoffitGutter' ? 'Fascia, Soffit & Gutter Clean' :
                            id === 'conservatoryRoof' ? 'Conservatory Roof Cleaning' :
                            'Solar Panel Cleaning';
                return name;
              }).join(', ') || 'None',
              total_price: formData.totalPrice,
              access_info: formData.details.accessInfo || 'None provided',
              additional_info: formData.details.additionalInfo || 'None provided',
              'g-recaptcha-response': recaptchaResponse
            };
            
            await emailjs.send('service_90gcdah', 'template_9eb0o4s', emailData);
          } catch (emailError) {
            console.error('EmailJS notification failed:', emailError);
            // Don't fail the whole submission if email fails
          }
          
          // Show success message
          showSuccess('Booking request submitted successfully! We will contact you within 24 hours.');
          
          // Redirect after delay
          setTimeout(() => {
            window.location.href = '/';
          }, 3000);
          
        } else {
          // Handle error
          const errorMessage = result.error || 'There was an error submitting your request';
          console.error('Booking submission error:', result);
          showError(errorMessage);
          
          // Restore button
          submitBtn.disabled = false;
          submitBtn.innerHTML = originalText;
        }
        
      } catch (error) {
        console.error('Booking submission error:', error);
        showError('There was an error submitting your request. Please try again or contact us directly at 01458 860339.');
        
        // Restore button
        const submitBtn = document.getElementById('submit-booking');
        submitBtn.disabled = false;
        submitBtn.innerHTML = 'Submit Booking Request';
      }
    }
    
    // Helper functions for showing messages
    function showError(message) {
      const alertDiv = document.createElement('div');
      alertDiv.className = 'fixed top-4 left-1/2 transform -translate-x-1/2 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded z-50';
      alertDiv.innerHTML = `
        <strong class="font-bold">Error!</strong>
        <span class="block sm:inline">${message}</span>
      `;
      document.body.appendChild(alertDiv);
      
      setTimeout(() => {
        alertDiv.remove();
      }, 5000);
    }
    
    function showSuccess(message) {
      const alertDiv = document.createElement('div');
      alertDiv.className = 'fixed top-4 left-1/2 transform -translate-x-1/2 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded z-50';
      alertDiv.innerHTML = `
        <strong class="font-bold">Success!</strong>
        <span class="block sm:inline">${message}</span>
      `;
      document.body.appendChild(alertDiv);
      
      setTimeout(() => {
        alertDiv.remove();
      }, 5000);
    }
