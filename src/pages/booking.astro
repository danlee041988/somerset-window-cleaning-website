---
import Layout from '~/layouts/PageLayout.astro';
import Image from '~/components/common/Image.astro';

const metadata = {
  title: 'Book Window Cleaning Online - Somerset Window Cleaning | Get Your Quote',
  description: 'Book professional window cleaning in Somerset online. Quick and easy booking form for all our services.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <div class="relative bg-gray-900 py-16">
    <div class="absolute inset-0">
      <Image 
        src="~/assets/images/optimized/solar-panels-medium.webp" 
        alt="Book professional window cleaning services" 
        width={800} 
        height={600} 
        style="width:100%; height:100%; object-fit:cover; opacity:0.3;" 
      />
      <div class="absolute inset-0 bg-black/50"></div>
    </div>
    <div class="relative max-w-7xl mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
        Book Your <span class="text-red-500">Window Cleaning</span> Service
      </h1>
      <p class="text-gray-300 text-xl mb-8">
        Professional, reliable service across Somerset - Get your quote today
      </p>
    </div>
  </div>

  <!-- NoteForm Booking Section -->
  <section class="py-12 bg-black">
    <div class="max-w-4xl mx-auto px-4">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-white mb-4">Request Your Quote</h2>
        <p class="text-gray-300">Fill out the form below and we'll provide you with a personalized quote</p>
      </div>
      
      <!-- NoteForm Embedded -->
      <div class="bg-white rounded-2xl shadow-xl overflow-hidden border-4 border-gray-700">
        <div class="bg-gray-800 px-6 py-4">
          <h3 class="text-white font-semibold text-lg">Request Your Quote</h3>
          <p class="text-gray-300 text-sm">Fill out the form below for a personalized quote</p>
        </div>
        <iframe 
          style="border:none;width:100%;min-height:700px;background:white;" 
          id="noteform-45skqy" 
          src="https://noteforms.com/forms/noteform-45skqy"
          title="Somerset Window Cleaning Booking Form"
          loading="lazy"
        ></iframe>
      </div>
      
      <!-- Alternative Contact Methods -->
      <div class="mt-12 text-center">
        <h3 class="text-xl font-semibold text-white mb-6">Prefer to speak directly?</h3>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="tel:01458860339" class="inline-flex items-center bg-red-600 hover:bg-red-700 text-white px-6 py-3 rounded-lg transition-colors">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            Call 01458 860339
          </a>
          <a href="https://wa.me/447415526331" class="inline-flex items-center bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg transition-colors" target="_blank">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            WhatsApp Us
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Load NoteForm Script -->
  <script type="text/javascript" src="https://noteforms.com/widgets/iframe.min.js"></script>
  <script>
    // Initialize NoteForm when the page loads
    document.addEventListener('DOMContentLoaded', function() {
      if (typeof initEmbed === 'function') {
        initEmbed('noteform-45skqy');
      }
    });
  </script>
</Layout>