---
import StaffLayout from '~/layouts/StaffLayout.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Staff Login - Somerset Window Cleaning',
  robots: {
    index: false,
    follow: false,
  },
};

// Check if already logged in
const isLoggedIn = Astro.cookies.get('staff-auth')?.value;
if (isLoggedIn && Astro.request.method === 'GET') {
  return Astro.redirect('/staff/bookings');
}
---

<StaffLayout metadata={metadata}>
  <div class="min-h-screen flex items-center justify-center bg-gray-900 px-4">
    <div class="max-w-md w-full">
      <!-- Logo and Title -->
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-white mb-2">Staff Portal</h1>
        <p class="text-gray-400">Somerset Window Cleaning</p>
      </div>

      <!-- Login Form -->
      <div class="bg-gray-800 rounded-lg shadow-xl p-8 border border-gray-700">
        <form id="loginForm" class="space-y-6">
          <div class="bg-amber-900/50 border border-amber-500 text-amber-200 px-4 py-3 rounded-lg text-sm">
            <strong>Temporary Access:</strong> Password authentication disabled for testing. Click login to continue.
          </div>

          <div class="flex items-center">
            <input
              type="checkbox"
              id="remember"
              name="remember"
              class="h-4 w-4 bg-gray-700 border-gray-600 rounded text-red-600 focus:ring-red-500"
            />
            <label for="remember" class="ml-2 block text-sm text-gray-300">
              Remember me on this device
            </label>
          </div>

          <button
            type="submit"
            class="w-full flex justify-center items-center gap-2 py-3 px-4 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-lg transition duration-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 focus:ring-offset-gray-800"
          >
            <Icon name="tabler:login" class="w-5 h-5" />
            Login to Dashboard
          </button>

          <div id="error-message" class="hidden bg-red-900/50 border border-red-500 text-red-200 px-4 py-3 rounded-lg text-sm">
            Login error. Please try again.
          </div>
        </form>

        <!-- Info Box -->
        <div class="mt-6 p-4 bg-gray-700/50 rounded-lg border border-gray-600">
          <p class="text-sm text-gray-300">
            <strong>Staff Only:</strong> This area is for Somerset Window Cleaning team members only. 
            If you're a customer, please use the <a href="/contact" class="text-red-400 hover:text-red-300 underline">contact form</a>.
          </p>
        </div>
      </div>

      <!-- Back to Website -->
      <div class="text-center mt-6">
        <a href="/" class="text-gray-400 hover:text-white text-sm">
          ‚Üê Back to main website
        </a>
      </div>
    </div>
  </div>

  <script>
    const form = document.getElementById('loginForm') as HTMLFormElement;
    const errorMessage = document.getElementById('error-message');
    
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(form);
      const remember = formData.get('remember') === 'on';
      
      try {
        const response = await fetch('/api/staff/auth', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ remember }),
        });
        
        const data = await response.json();
        
        if (data.success) {
          window.location.href = '/staff/bookings';
        } else {
          errorMessage?.classList.remove('hidden');
        }
      } catch (error) {
        console.error('Login error:', error);
        errorMessage?.classList.remove('hidden');
      }
    });
  </script>
</StaffLayout>