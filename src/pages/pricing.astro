---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Image from '~/components/common/Image.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Pricing" title="Transparent pricing" subtitle="Simple, competitive rates with no hidden charges.">
    <Fragment slot="bg">
      <Image src="~/assets/images/DJI_0007.JPG" alt="" width={1600} height={900} layout="cover" style="width:100%; height:100%; object-fit:cover; opacity:0.35;" />
      <div class="absolute inset-0 bg-black/40"></div>
    </Fragment>
  </HeroText>

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our prices"
    subtitle="Guide pricing — confirmed on quote"
    prices={[
      {
        title: 'Residential',
        subtitle: 'Regular service',
        price: 'from 15',
        period: 'per clean',
        items: [
          { description: '2 Bed: £15–20' },
          { description: '3 Bed: £20–25' },
          { description: '4 Bed: £25–35' },
        ],
        callToAction: { text: 'Get a quote', href: '/contact' },
      },
      {
        title: 'Additional services',
        subtitle: 'Competitive',
        price: 'enquire',
        period: 'fixed quote',
        items: [
          { description: 'Gutter clearing from £60' },
          { description: 'Conservatory roof cleaning from £40' },
          { description: 'Solar panel cleaning from £50' },
        ],
        callToAction: { text: 'Get a quote', href: '/contact' },
      },
      {
        title: 'Commercial',
        subtitle: 'Flexible schedules',
        price: 'POA',
        period: 'site visit',
        items: [
          { description: 'Shops and offices' },
          { description: 'Managed sites' },
          { description: 'Out-of-hours options' },
        ],
        callToAction: { text: 'Book a visit', href: '/contact' },
        hasRibbon: true,
        ribbonTitle: 'Popular',
      },
    ]}
  />

  <!-- FAQs *************************** -->

  <FAQs
    title="Pricing FAQs"
    subtitle="Quick answers about pricing and scheduling."
    columns={1}
    items={[
      { title: 'How are prices calculated?', description: 'Prices depend on property size, access and frequency. We confirm your price on quote.' },
      { title: 'Do you charge extra for 8 or 12 weekly?', description: 'Yes, a small surcharge applies for less frequent schedules (guide: +£3 / +£5).' },
     { title: 'Do you offer combined service discounts?', description: 'Yes. Ask for a combined quote for gutters, fascia/soffit or conservatory roof cleaning.' },
      { title: 'Is there a call-out charge?', description: 'No. Quotes are free. Work is only charged once completed.' },
    ]}
  />

  

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready for a firm quote?"
    subtitle="Send us your postcode and property type — we’ll confirm your price."
    actions={[{ variant: 'primary', text: 'Get a free quote', href: '/contact' }]}
  />
</Layout>
