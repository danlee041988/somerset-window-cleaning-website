---
import Layout from '~/layouts/PageLayout.astro';
import Image from '~/components/common/Image.astro';

const metadata = {
  title: 'Book Window Cleaning Online - Quick Booking | Somerset Window Cleaning',
  description: 'Quick booking process for professional window cleaning in Somerset. Get instant pricing and book online in under 2 minutes.',
};
---

<Layout metadata={metadata}>
  <!-- Compact Hero Section -->
  <div class="relative bg-gray-900 py-12">
    <div class="absolute inset-0">
      <Image src="~/assets/images/solar-panels.jpeg" alt="" width={1600} height={400} layout="cover" style="width:100%; height:100%; object-fit:cover; opacity:0.2;" />
    </div>
    <div class="relative max-w-7xl mx-auto px-4 text-center">
      <h1 class="text-3xl font-bold text-white mb-2">Professional Window Cleaning <span class="text-red-500">Quick Book</span></h1>
      <p class="text-gray-300 text-lg">Complete the form below to request your service</p>
    </div>
  </div>

  <!-- Simple Noteform Integration -->
  <div class="bg-gray-50 min-h-screen py-8">
    <div class="max-w-4xl mx-auto px-4">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-800 mb-4">Book Your Service Online</h2>
        <p class="text-gray-600 text-lg">Complete the form below to request your window cleaning service</p>
      </div>

      <!-- Noteform Iframe -->
      <div class="bg-white rounded-lg shadow-lg p-6">
        <iframe 
          style="border:none;width:100%;min-height:600px;" 
          id="noteform-45skqy" 
          src="https://noteforms.com/forms/noteform-45skqy">
        </iframe>
        <script 
          type="text/javascript" 
          onload="initEmbed('noteform-45skqy')" 
          src="https://noteforms.com/widgets/iframe.min.js">
        </script>
      </div>

      <!-- Trust Indicators -->
      <div class="mt-8 text-center">
        <div class="flex items-center justify-center space-x-8 text-gray-600">
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span>Fully Insured</span>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span>5-Star Reviews</span>
          </div>
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span>No Contract Required</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>