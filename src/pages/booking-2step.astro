<script>
  // Pricing calculation logic
  function calculatePrice(property, frequency, additionalServices) {
    let basePrice = 0;
    
    // Base window cleaning prices - new pricing structure
    const prices = {
      '1-2 Bed': 20,
      '2-3 Bed': 25,
      '4 Bed': 30,
      '5 Bed': 35,
      '6+ Bed': 0, // Custom quote
      'Commercial': 0 // Custom quote
    };
    
    basePrice = prices[property] || 0;
    
    // Frequency adjustments
    if (frequency === '8') {
      basePrice += 3;
    } else if (frequency === 'one-off') {
      basePrice += 5;
    }
    
    let totalPrice = basePrice;
    let additionalCost = 0;
    
    // Additional services - calculate based on property size
    if (additionalServices.has('fascia-soffit-gutter')) {
      // Fascia pricing based on property size (gutter clearing + £20)
      const gutterPrice = getGutterClearingPrice(property);
      additionalCost += gutterPrice + 20;
    }
    if (additionalServices.has('gutter-clearing')) {
      additionalCost += getGutterClearingPrice(property);
    }
    
    function getGutterClearingPrice(bedrooms) {
      switch (bedrooms) {
        case '1-2 Bed': return 70;
        case '2-3 Bed': return 80;
        case '4 Bed': return 100;
        case '5 Bed': return 120;
        case '6+ Bed': return 150;
        default: return 80;
      }
    }
    
    // Special offer: First clean free if both additional services selected
    const hasBothServices = additionalServices.has('fascia-soffit-gutter') && additionalServices.has('gutter-clearing');
    const firstCleanDiscount = hasBothServices ? basePrice : 0;
    
    totalPrice = basePrice + additionalCost - firstCleanDiscount;
    
    return {
      windowCleaningPrice: basePrice,
      additionalCost: additionalCost,
      firstCleanDiscount: firstCleanDiscount,
      totalPrice: Math.max(0, totalPrice)
    };
  }

  // State management
  let selectedProperty = null;
  let selectedFrequency = '4';
  let additionalServices = new Set();
  let currentStep = 1;

  // Initialize the form
  document.addEventListener('DOMContentLoaded', function() {
    initializeForm();
  });

  function initializeForm() {
    // Property selection handlers
    document.querySelectorAll('.bedroom-option').forEach(button => {
      button.addEventListener('click', function() {
        selectProperty(this.dataset.bedrooms);
      });
    });

    // Frequency tab handlers
    document.querySelectorAll('.frequency-tab').forEach(button => {
      button.addEventListener('click', function() {
        selectFrequency(this.dataset.frequency);
      });
    });

    // Additional services handlers
    document.querySelectorAll('.additional-service input[type="checkbox"]').forEach(checkbox => {
      checkbox.addEventListener('change', function() {
        if (this.checked) {
          additionalServices.add(this.id);
        } else {
          additionalServices.delete(this.id);
        }
        updatePricing();
        updateSpecialOffer();
      });
    });

    // Continue button handler
    document.getElementById('continue-to-booking').addEventListener('click', function() {
      goToStep(2);
    });

    // Form submission handler
    document.getElementById('booking-form').addEventListener('submit', function(e) {
      e.preventDefault();
      submitBooking();
    });
  }

  function selectProperty(bedrooms) {
    // Update visual selection with enhanced mobile feedback
    document.querySelectorAll('.bedroom-option').forEach(btn => {
      btn.classList.remove('border-red-500', 'bg-gray-600', 'selected');
      btn.classList.add('border-gray-600', 'bg-gray-700');
    });

    const selectedCard = event.target.closest('.bedroom-option');
    selectedCard.classList.remove('border-gray-600', 'bg-gray-700');
    selectedCard.classList.add('border-red-500', 'bg-gray-600', 'selected');
    
    // Add haptic feedback for mobile
    if (navigator.vibrate) {
      navigator.vibrate(50);
    }
    
    // Smooth scroll to show pricing update on mobile
    if (window.innerWidth < 768) {
      setTimeout(() => {
        document.getElementById('total-price').scrollIntoView({ 
          behavior: 'smooth', 
          block: 'nearest' 
        });
      }, 300);
    }

    selectedProperty = bedrooms;
    updatePricing();
    updateServicePricing();
    
    // Enable continue button with animation
    const continueBtn = document.getElementById('continue-to-booking');
    continueBtn.disabled = false;
    continueBtn.classList.add('pulse-animation');
    setTimeout(() => continueBtn.classList.remove('pulse-animation'), 1000);
  }

  function selectFrequency(frequency) {
    // Update visual selection for frequency tabs
    document.querySelectorAll('.frequency-tab').forEach(btn => {
      btn.classList.remove('border-red-500');
      btn.classList.add('border-gray-600');
      
      // Reset indicators
      const indicator = btn.querySelector('.w-6.h-6');
      const icon = btn.querySelector('.w-6.h-6 span');
      if (indicator && icon) {
        indicator.classList.remove('bg-red-600');
        indicator.classList.add('bg-gray-600');
        icon.classList.remove('text-white');
        icon.classList.add('text-gray-400');
        icon.textContent = '○';
      }
    });

    // Highlight selected frequency tab
    const selectedTab = document.querySelector(`[data-frequency="${frequency}"]`);
    if (selectedTab) {
      selectedTab.classList.remove('border-gray-600');
      selectedTab.classList.add('border-red-500');
      
      const indicator = selectedTab.querySelector('.w-6.h-6');
      const icon = selectedTab.querySelector('.w-6.h-6 span');
      if (indicator && icon) {
        indicator.classList.remove('bg-gray-600');
        indicator.classList.add('bg-red-600');
        icon.classList.remove('text-gray-400');
        icon.classList.add('text-white');
        icon.textContent = '✓';
      }
    }

    selectedFrequency = frequency;
    updatePricing();
  }

  function updatePricing() {
    if (!selectedProperty) return;

    const pricing = calculatePrice(selectedProperty, selectedFrequency, additionalServices);
    
    // Update main pricing display
    document.getElementById('window-cleaning-price').textContent = `£${pricing.windowCleaningPrice}`;
    document.getElementById('window-cleaning-frequency').textContent = selectedFrequency;
    
    // Update summary
    document.getElementById('selected-property').textContent = selectedProperty;
    document.getElementById('window-price').textContent = `£${pricing.windowCleaningPrice}`;
    document.getElementById('frequency-display').textContent = selectedFrequency;
    document.getElementById('total-price').textContent = `£${pricing.totalPrice}`;

    // Update additional services summary
    const summaryDiv = document.getElementById('additional-services-summary');
    summaryDiv.innerHTML = '';
    
    additionalServices.forEach(service => {
      const div = document.createElement('div');
      div.className = 'bg-gray-700 rounded-lg p-4';
      
      if (service === 'fascia-soffit-gutter') {
        const fasciaPrice = getGutterClearingPrice(selectedProperty) + 20;
        div.innerHTML = `
          <div class="flex justify-between items-center">
            <span class="text-white font-medium">Fascia & Gutter Clean</span>
            <span class="text-red-400 font-bold text-lg">£${fasciaPrice}</span>
          </div>
          <div class="text-xs text-gray-400 mt-1">One-time service</div>
        `;
      } else if (service === 'gutter-clearing') {
        const gutterPrice = getGutterClearingPrice(selectedProperty);
        div.innerHTML = `
          <div class="flex justify-between items-center">
            <span class="text-white font-medium">Gutter Clearing</span>
            <span class="text-red-400 font-bold text-lg">£${gutterPrice}</span>
          </div>
          <div class="text-xs text-gray-400 mt-1">One-time service</div>
        `;
      }
      
      summaryDiv.appendChild(div);
    });

    // Update payment schedule
    if (selectedProperty === '6+ Bed' || selectedProperty === 'Commercial') {
      document.getElementById('payment-schedule').textContent = 'Physical quotation required';
    } else {
      document.getElementById('payment-schedule').textContent = `Regular payment every ${selectedFrequency} weeks`;
    }
  }

  function updateSpecialOffer() {
    const hasBothServices = additionalServices.has('fascia-soffit-gutter') && additionalServices.has('gutter-clearing');
    const banner = document.getElementById('special-offer-banner');
    const summary = document.getElementById('special-offer-summary');
    
    if (hasBothServices) {
      banner.style.display = 'block';
      summary.style.display = 'block';
    } else {
      banner.style.display = 'none';
      summary.style.display = 'none';
    }
  }

  function goToStep(step) {
    if (step === 2) {
      // Hide step 1, show step 2
      document.getElementById('step-1').style.display = 'none';
      document.getElementById('step-2').style.display = 'block';
      
      // Switch from quote section to review section
      document.getElementById('quote-section').style.display = 'none';
      document.getElementById('review-section').style.display = 'block';
      
      // Update progress indicators
      document.getElementById('step-1-indicator').classList.remove('bg-red-600');
      document.getElementById('step-1-indicator').classList.add('bg-green-600');
      document.getElementById('progress-1').style.width = '100%';
      
      document.getElementById('step-2-indicator').classList.remove('bg-gray-600', 'text-gray-300');
      document.getElementById('step-2-indicator').classList.add('bg-red-600', 'text-white');
      
      // Populate review section
      populateReviewSection();
      
      currentStep = 2;
    }
  }

  function updateServicePricing() {
    if (!selectedProperty) return;
    
    const gutterPrice = getGutterClearingPrice(selectedProperty);
    const fasciaPrice = gutterPrice + 20;
    
    // Update pricing displays
    document.getElementById('gutter-price').textContent = `£${gutterPrice}`;
    document.getElementById('fascia-price').textContent = `£${fasciaPrice}`;
  }

  function populateReviewSection() {
    // Update review summary
    document.getElementById('review-property').textContent = selectedProperty || '--';
    document.getElementById('review-frequency').textContent = selectedFrequency ? `Every ${selectedFrequency} weeks` : '--';
    document.getElementById('review-total').textContent = document.getElementById('total-price').textContent;
    
    // Get address from form
    const address = document.getElementById('address').value;
    const city = document.getElementById('city').value;
    const postcode = document.getElementById('postcode').value;
    const fullAddress = [address, city, postcode].filter(Boolean).join(', ') || '--';
    document.getElementById('review-address').textContent = fullAddress;
    
    // Update services list
    const servicesDiv = document.getElementById('review-services');
    servicesDiv.innerHTML = '';
    
    // Add window cleaning
    const windowService = document.createElement('div');
    windowService.className = 'flex justify-between';
    windowService.innerHTML = `
      <span class="text-gray-300">Window Cleaning</span>
      <span class="text-white">${document.getElementById('window-price').textContent}</span>
    `;
    servicesDiv.appendChild(windowService);
    
    // Add additional services
    additionalServices.forEach(service => {
      const serviceDiv = document.createElement('div');
      serviceDiv.className = 'flex justify-between';
      
      if (service === 'fascia-soffit-gutter') {
        const fasciaPrice = getGutterClearingPrice(selectedProperty) + 20;
        serviceDiv.innerHTML = `<span class="text-gray-300">Fascia & Gutter Clean</span><span class="text-white">£${fasciaPrice}</span>`;
      } else if (service === 'gutter-clearing') {
        const gutterPrice = getGutterClearingPrice(selectedProperty);
        serviceDiv.innerHTML = `<span class="text-gray-300">Gutter Clearing</span><span class="text-white">£${gutterPrice}</span>`;
      }
      
      servicesDiv.appendChild(serviceDiv);
    });
    
    // Add special offer if applicable
    const hasBothServices = additionalServices.has('fascia-soffit-gutter') && additionalServices.has('gutter-clearing');
    if (hasBothServices) {
      const offerDiv = document.createElement('div');
      offerDiv.className = 'flex justify-between text-green-400';
      offerDiv.innerHTML = '<span>First Clean Discount</span><span>FREE</span>';
      servicesDiv.appendChild(offerDiv);
    }
  }

  function submitBooking() {
    // Collect form data
    const formData = new FormData(document.getElementById('booking-form'));
    const bookingData = {
      property: selectedProperty,
      frequency: selectedFrequency,
      services: Array.from(additionalServices),
      customer: Object.fromEntries(formData),
      pricing: calculatePrice(selectedProperty, selectedFrequency, additionalServices)
    };

    // Submit booking (placeholder)
    console.log('Booking submitted:', bookingData);
    alert('Booking submitted successfully! (This is a demo)');
  }
</script>

