                    <div class="flex justify-between">
                      <span class="text-gray-300">Property:</span>
                      <span id="review-property" class="text-white">--</span>
                    </div>
                    <div class="flex justify-between">
                      <span class="text-gray-300">Frequency:</span>
                      <span id="review-frequency" class="text-white">--</span>
                    </div>
                    <div class="flex justify-between">
                      <span class="text-gray-300">Address:</span>
                      <span id="review-address" class="text-white text-right">--</span>
                    </div>
                  </div>
                </div>

                <div class="bg-gray-700 rounded-lg p-4">
                  <h4 class="text-white font-medium mb-3">Services</h4>
                  <div id="review-services" class="space-y-2 text-sm">
                    <!-- Services will be populated here -->
                  </div>
                </div>

                <div class="bg-red-900 rounded-lg p-4">
                  <div class="flex justify-between items-center">
                    <span class="text-red-100 font-bold text-lg">Total Amount:</span>
                    <span id="review-total" class="text-red-200 font-bold text-2xl">£--</span>
                  </div>
