                  <input type="text" id="postcode" name="postcode" required class="w-full p-3 bg-gray-700 text-white border border-gray-600 rounded-lg focus:border-red-500 focus:outline-none">
                </div>
                <div>
                  <label for="county" class="block text-white text-sm font-medium mb-2">County</label>
                  <input type="text" id="county" name="county" value="Somerset" class="w-full p-3 bg-gray-700 text-white border border-gray-600 rounded-lg focus:border-red-500 focus:outline-none">
                </div>
              </div>

              <!-- Special Instructions -->
              <div>
                <label for="notes" class="block text-white text-sm font-medium mb-2">Special Instructions (Optional)</label>
                <textarea id="notes" name="notes" rows="3" placeholder="Gate access, parking instructions, specific areas of focus..." class="w-full p-3 bg-gray-700 text-white border border-gray-600 rounded-lg focus:border-red-500 focus:outline-none"></textarea>
              </div>
            </form>
          </div>
        </div>

        <!-- Right Column: Combined Quote & Review -->
        <div class="lg:col-span-1">
          <div class="bg-gray-800 rounded-lg border border-gray-700 p-6 sticky top-20">
            <!-- Step 1: Quote Summary -->
            <div id="quote-section">
              <h3 class="text-xl font-bold text-white mb-4">Your Quote</h3>
              
              <div id="price-breakdown" class="space-y-4">
