---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Image from '~/components/common/Image.astro';

const metadata = {
  title: 'Book Window Cleaning Online - 2-Step Booking | Somerset Window Cleaning',
  description: 'Quick 2-step booking process for professional window cleaning in Somerset. Get instant pricing and book online in under 2 minutes.',
};
---

<Layout metadata={metadata}>
  <!-- Compact Hero Section -->
  <div class="relative bg-gray-900 py-12">
    <div class="absolute inset-0">
      <Image src="~/assets/images/solar-panels.jpeg" alt="" width={1600} height={400} layout="cover" style="width:100%; height:100%; object-fit:cover; opacity:0.2;" />
    </div>
    <div class="relative max-w-7xl mx-auto px-4 text-center">
      <h1 class="text-3xl font-bold text-white mb-2">Professional Window Cleaning <span class="text-red-500">Quick Book</span></h1>
      <p class="text-gray-300 text-lg">2-Step Booking - Get your quote and book in under 2 minutes</p>
    </div>
  </div>

  <!-- Simplified 2-Step Booking Form -->
  <div class="bg-gray-900 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 py-6">
      
      <!-- Progress Steps -->
      <div class="mb-6">
        <div class="flex items-center justify-center space-x-6 mb-4">
          <div class="flex items-center">
            <div id="step-1-indicator" class="w-8 h-8 bg-red-600 text-white rounded-full flex items-center justify-center text-sm font-bold">1</div>
            <span class="ml-2 text-sm font-medium text-white">Select Property & Services</span>
          </div>
          <div class="w-12 h-1 bg-gray-600"><div id="progress-1" class="h-full bg-red-600 transition-all duration-300" style="width: 0%"></div></div>
          
          <div class="flex items-center">
            <div id="step-2-indicator" class="w-8 h-8 bg-gray-600 text-gray-300 rounded-full flex items-center justify-center text-sm font-bold">2</div>
            <span class="ml-2 text-sm font-medium text-gray-300">Complete Booking</span>
          </div>
        </div>
      </div>

      <div class="grid lg:grid-cols-3 gap-8">
        
        <!-- Left Column: Form Steps -->
        <div class="lg:col-span-2">
          
          <!-- Step 1: Property & Services Combined -->
          <div id="step-1" class="bg-gray-800 rounded-lg border border-gray-700 p-6 mb-4">
            <h2 class="text-xl font-bold text-white mb-4">Step 1: Choose Your Property & Services</h2>
            
            <!-- Property Size Selection -->
            <div class="mb-8">
              <h3 class="text-lg font-semibold text-white mb-4">Property Size</h3>
              <p class="text-sm text-gray-300 mb-4">Select your property type for accurate pricing</p>
              
              <!-- Mobile-First Property Grid -->
              <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                <!-- Enhanced Mobile-Friendly Property Options -->
                <button class="bedroom-option property-card group bg-gray-700 border-2 border-gray-600 p-4 rounded-xl hover:border-red-500 hover:bg-gray-600 transition-all duration-300 min-h-[80px] active:scale-95" data-bedrooms="1-2 Bed">
                  <div class="flex items-center space-x-3">
                    <div class="w-12 h-12 bg-red-600 rounded-full flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300">
                      <span class="text-white font-bold text-lg">🛏️</span>
                    </div>
                    <div class="flex-1 text-left">
                      <div class="text-white font-semibold">1-2 Bedroom</div>
                      <div class="text-gray-300 text-sm">Apartment / Small House</div>
                      <div class="text-red-400 text-xs font-medium">From £20</div>
                    </div>
                  </div>
                </button>
                
                <button class="bedroom-option property-card group bg-gray-700 border-2 border-gray-600 p-4 rounded-xl hover:border-red-500 hover:bg-gray-600 transition-all duration-300 min-h-[80px] active:scale-95" data-bedrooms="2-3 Bed">
                  <div class="flex items-center space-x-3">
                    <div class="w-12 h-12 bg-red-600 rounded-full flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform duration-300">
                      <span class="text-white font-bold text-sm">🛏️🛏️</span>
                    </div>
                    <div class="flex-1 text-left">
                      <div class="text-white font-semibold">2-3 Bedroom</div>
