                </div>
              </div>

              <!-- Frequency Selection -->
              <div class="mb-6">
                <label class="block text-white text-sm font-medium mb-3">Cleaning Frequency</label>
                <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
                  <!-- 4 weeks tab -->
                  <button class="frequency-tab bg-gray-700 border-2 border-red-500 p-4 rounded-lg hover:bg-gray-600 transition-all duration-300 text-left" data-frequency="4">
                    <div class="flex items-center justify-between">
                      <div>
                        <div class="text-white font-semibold">Every 4 weeks</div>
                        <div class="text-gray-300 text-sm">Regular service</div>
                      </div>
                      <div class="w-6 h-6 bg-red-600 rounded-full flex items-center justify-center">
                        <span class="text-white text-xs">✓</span>
                      </div>
                    </div>
                  </button>
                  
                  <!-- 8 weeks tab -->
                  <button class="frequency-tab bg-gray-700 border-2 border-gray-600 p-4 rounded-lg hover:border-red-500 hover:bg-gray-600 transition-all duration-300 text-left" data-frequency="8">
                    <div class="flex items-center justify-between">
                      <div>
                        <div class="text-white font-semibold">Every 8 weeks</div>
                        <div class="text-gray-300 text-sm">+£3 per clean</div>
                      </div>
                      <div class="w-6 h-6 bg-gray-600 rounded-full flex items-center justify-center">
                        <span class="text-gray-400 text-xs">○</span>
                      </div>
                    </div>
                  </button>
                  
                  <!-- One-off tab -->
                  <button class="frequency-tab bg-gray-700 border-2 border-gray-600 p-4 rounded-lg hover:border-red-500 hover:bg-gray-600 transition-all duration-300 text-left" data-frequency="one-off">
                    <div class="flex items-center justify-between">
                      <div>
                        <div class="text-white font-semibold">One-off clean</div>
                        <div class="text-gray-300 text-sm">+£5 per clean</div>
                      </div>
                      <div class="w-6 h-6 bg-gray-600 rounded-full flex items-center justify-center">
                        <span class="text-gray-400 text-xs">○</span>
                      </div>
                    </div>
                  </button>
                </div>
              </div>

              <!-- Additional Services -->
              <div class="space-y-3">
                <h4 class="text-white font-medium mb-3">Additional Services (Optional)</h4>
                
                <!-- Fascia, Soffit & Gutter Clean -->
                <div class="bg-gray-700 rounded-lg p-4 border-2 border-gray-600 additional-service" data-service="fascia-soffit-gutter">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center">
                      <input type="checkbox" id="fascia-soffit-gutter" class="w-5 h-5 text-red-600 bg-gray-600 border-gray-500 rounded focus:ring-red-500">
                      <div class="ml-3">
                        <h5 class="text-white font-medium">Fascia, Soffit & Gutter Clean</h5>
                        <p class="text-gray-300 text-sm">Complete exterior cleaning package</p>
                      </div>
                    </div>
                    <div class="text-right">
                      <div id="fascia-price" class="text-white font-bold">From £90</div>
