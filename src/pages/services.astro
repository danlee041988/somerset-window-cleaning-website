---
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';
import Image from '~/components/common/Image.astro';

const metadata = {
  title: 'Professional Window Cleaning Services Somerset | Gutter Clearing | Fascia Cleaning',
  description: 'Professional window cleaning, gutter clearing, fascia & soffit cleaning across Somerset. Fully insured service from £20. Book online or call 01458 860339.',
};
---

<Layout metadata={metadata} structuredDataType="services">
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Our services"
    actions={[{ variant: 'primary', text: 'Get FREE Quote', href: '/booking-2step', icon: 'tabler:calculator' }]}
  >
    <Fragment slot="title">Professional exterior cleaning <span class="text-accent">you can trust</span></Fragment>
    <Fragment slot="subtitle">Clean, safe and reliable across Somerset — <span class="text-accent">fully insured</span>.</Fragment>
    <Fragment slot="bg">
      <Image src="~/assets/images/optimized/solar-panels-large.webp" alt="Professional exterior cleaning services in Somerset" width={1200} height={800} layout="cover" style="width:100%; height:100%; object-fit:cover; opacity:0.35;" />
      <div class="absolute inset-0 bg-black/40"></div>
    </Fragment>
  </Hero>

  <!-- Features2 Widget ************** -->

  <Features2
    id="services"
    title="What we do"
    subtitle="Comprehensive exterior cleaning for homes and businesses."
    columns={3}
    classes={{
      container: 'pb-16 md:pb-20 lg:pb-24'
    }}
    items={[
      {
        title: 'Window cleaning',
        description: 'Pure water, reach-and-wash for a sparkling, streak‑free finish. Frames and sills included.',
        icon: 'tabler:sparkles',
        callToAction: { text: 'Learn More', href: '/services/window-cleaning' },
      },
      {
        title: 'Gutter clearing',
        description: 'High‑reach vacuum system removes moss and leaves.',
        icon: 'tabler:brand-abstract',
        callToAction: { text: 'Learn More', href: '/services/gutter-cleaning' },
      },
      {
        title: 'Fascia & soffit',
        description: 'UPVC fascia, soffit and gutter exterior cleaned to restore kerb appeal.',
        icon: 'tabler:home',
        callToAction: { text: 'Learn More', href: '/services/fascia-soffit-cleaning' },
      },
      {
        title: 'Conservatory roof cleaning',
        description: 'Roof panels and frames carefully cleaned to bring back the sparkle.',
        icon: 'tabler:building',
        callToAction: { text: 'Learn More', href: '/services/conservatory-cleaning' },
      },
      {
        title: 'Solar panel cleaning',
        description: 'Specialist cleaning to help maintain panel efficiency and warranties.',
        icon: 'tabler:sun',
        callToAction: { text: 'Learn More', href: '/services/solar-panel-cleaning' },
      },
      {
        title: 'Commercial window cleaning',
        description: 'Professional service for businesses with health & safety compliance and flexible scheduling.',
        icon: 'tabler:building-store',
        callToAction: { text: 'Get FREE Quote', href: '/services/commercial-window-cleaning' },
      },
    ]}
  />

  <!-- Individual Service Sections for Anchor Links - Optimised spacing -->
  <div class="relative -mt-12 md:-mt-16 lg:-mt-20">
    <div id="gutters" class="absolute -top-16"></div>
    <div id="conservatory" class="absolute -top-16"></div>
    <div id="solar" class="absolute -top-16"></div>
    <div id="commercial" class="absolute -top-16"></div>
  </div>

</Layout>
