---
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';
import Image from '~/components/common/Image.astro';

const metadata = {
  title: 'Professional Window Cleaning Services Somerset | Gutter Clearing | Fascia Cleaning',
  description: 'Professional window cleaning, gutter clearing, fascia & soffit cleaning across Somerset. Fully insured service from £20. Book online or call 01458 860339.',
};
---

<Layout metadata={metadata} structuredDataType="services">
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Our services"
    actions={[
      { variant: 'primary', text: 'Book Now', href: '/book-now', icon: 'tabler:calendar-plus', class: 'text-white text-lg px-8 py-4 animate-pulse shadow-2xl transform hover:scale-110 transition-all duration-300' },
      { variant: 'secondary', text: 'Call 01458 860339', href: 'tel:01458860339', icon: 'tabler:phone', class: 'text-white text-lg px-6 py-4 border-2 border-primary hover:bg-primary/15 transition-all duration-300' },
      { variant: 'whatsapp', text: 'WhatsApp', href: 'https://wa.me/447415526331?text=Hi%20Somerset%20Window%20Cleaning%2C%20please%20can%20I%20get%20a%20quote%20for%20window%20cleaning%20at%20%5Byour%20address%5D', icon: 'tabler:brand-whatsapp', class: 'text-white text-lg px-6 py-4', target: '_blank' },
    ]}
  >
    <Fragment slot="title"><span class="text-red-500">Professional</span> exterior cleaning <span class="text-red-500">you can trust</span></Fragment>
    <Fragment slot="subtitle"><span class="text-red-500">Clean</span>, <span class="text-red-500">safe</span> and <span class="text-red-500">reliable</span> across <span class="text-red-500">Somerset</span> — <span class="text-red-500">fully insured</span>.</Fragment>
    <Fragment slot="content">
      <!-- Services quick links: show all services offered -->
      <nav aria-label="All services" class="mt-4">
        <ul class="flex flex-wrap items-center justify-center gap-2 md:gap-3">
          <li><a href="/services/window-cleaning" class="no-underline inline-flex items-center gap-2 px-3 py-2 md:px-4 md:py-2 rounded-full bg-white/10 text-white border border-white/15 hover:bg-white/20 transition">Window Cleaning</a></li>
          <li><a href="/services/gutter-cleaning" class="no-underline inline-flex items-center gap-2 px-3 py-2 md:px-4 md:py-2 rounded-full bg-white/10 text-white border border-white/15 hover:bg-white/20 transition">Gutter Clearing</a></li>
          <li><a href="/services/fascia-soffit-cleaning" class="no-underline inline-flex items-center gap-2 px-3 py-2 md:px-4 md:py-2 rounded-full bg-white/10 text-white border border-white/15 hover:bg-white/20 transition">Fascia &amp; Soffit</a></li>
          <li><a href="/services/conservatory-cleaning" class="no-underline inline-flex items-center gap-2 px-3 py-2 md:px-4 md:py-2 rounded-full bg-white/10 text-white border border-white/15 hover:bg-white/20 transition">Conservatory Roof</a></li>
          <li><a href="/services/solar-panel-cleaning" class="no-underline inline-flex items-center gap-2 px-3 py-2 md:px-4 md:py-2 rounded-full bg-white/10 text-white border border-white/15 hover:bg-white/20 transition">Solar Panel Cleaning</a></li>
          <li><a href="/services/commercial-window-cleaning" class="no-underline inline-flex items-center gap-2 px-3 py-2 md:px-4 md:py-2 rounded-full bg-white/10 text-white border border-white/15 hover:bg-white/20 transition">Commercial</a></li>
        </ul>
      </nav>
    </Fragment>
    <Fragment slot="bg">
      <Image src="~/assets/images/optimized/solar-panels-large.webp" alt="Professional exterior cleaning services in Somerset" width={1200} height={800} layout="cover" style="width:100%; height:100%; object-fit:cover; opacity:0.55;" />
      <div class="absolute inset-0 bg-black/40"></div>
    </Fragment>
  </Hero>

  <!-- Features2 Widget ************** -->

  <Features2
    id="services"
    title="What we do"
    subtitle="Comprehensive exterior cleaning for homes and businesses."
    columns={3}
    classes={{
      container: 'pb-16 md:pb-20 lg:pb-24'
    }}
    items={[
      {
        title: 'Window cleaning',
        description: 'Pure water, reach-and-wash for a sparkling, streak‑free finish. Frames and sills included.',
        icon: 'tabler:sparkles',
        callToAction: { text: 'Learn More', href: '/services/window-cleaning' },
      },
      {
        title: 'Gutter clearing',
        description: 'High‑reach vacuum system removes moss and leaves.',
        icon: 'tabler:brand-abstract',
        callToAction: { text: 'Learn More', href: '/services/gutter-cleaning' },
      },
      {
        title: 'Fascia & soffit',
        description: 'UPVC fascia, soffit and gutter exterior cleaned to restore kerb appeal.',
        icon: 'tabler:home',
        callToAction: { text: 'Learn More', href: '/services/fascia-soffit-cleaning' },
      },
      {
        title: 'Conservatory roof cleaning',
        description: 'Roof panels and frames carefully cleaned to bring back the sparkle.',
        icon: 'tabler:building',
        callToAction: { text: 'Learn More', href: '/services/conservatory-cleaning' },
      },
      {
        title: 'Solar panel cleaning',
        description: 'Specialist cleaning to help maintain panel efficiency and warranties.',
        icon: 'tabler:sun',
        callToAction: { text: 'Learn More', href: '/services/solar-panel-cleaning' },
      },
      {
        title: 'Commercial window cleaning',
        description: 'Professional service for businesses with health & safety compliance and flexible scheduling.',
        icon: 'tabler:building-store',
        callToAction: { text: 'Get FREE Quote', href: '/services/commercial-window-cleaning' },
      },
    ]}
  />

  <!-- Individual Service Sections for Anchor Links - Optimised spacing -->
  <div class="relative -mt-12 md:-mt-16 lg:-mt-20">
    <div id="gutters" class="absolute -top-16"></div>
    <div id="conservatory" class="absolute -top-16"></div>
    <div id="solar" class="absolute -top-16"></div>
    <div id="commercial" class="absolute -top-16"></div>
  </div>

</Layout>
