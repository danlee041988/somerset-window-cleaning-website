---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';
import Image from '~/components/common/Image.astro';

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata} structuredDataType="services">
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Our services"
    actions={[{ variant: 'primary', text: 'Get a free quote', href: '/contact', icon: 'tabler:calendar' }]}
  >
    <Fragment slot="title">Professional exterior cleaning <span class="text-accent">you can trust</span></Fragment>
    <Fragment slot="subtitle">Clean, safe and reliable across Somerset — <span class="text-accent">fully insured</span>.</Fragment>
    <Fragment slot="bg">
      <Image src="~/assets/images/solar panels.JPG" alt="" width={1600} height={900} layout="cover" style="width:100%; height:100%; object-fit:cover; opacity:0.35;" />
      <div class="absolute inset-0 bg-black/40"></div>
    </Fragment>
  </Hero>

  <!-- Features2 Widget ************** -->

  <Features2
    id="services"
    title="What we do"
    subtitle="Comprehensive exterior cleaning for homes and businesses."
    columns={3}
    items={[
      {
        title: 'Window cleaning',
        description: 'Pure water, reach-and-wash for a sparkling, streak‑free finish. Frames and sills included.',
        icon: 'tabler:sparkles',
      },
      {
        title: 'Gutter clearing',
        description: 'High‑reach vacuum system removes moss and leaves.',
        icon: 'tabler:brand-abstract',
      },
      {
        title: 'Fascia & soffit',
        description: 'UPVC fascia, soffit and gutter exterior cleaned to restore kerb appeal.',
        icon: 'tabler:home',
      },
      {
        title: 'Conservatory roof cleaning',
        description: 'Roof panels and frames carefully cleaned to bring back the sparkle.',
        icon: 'tabler:building',
      },
      {
        title: 'Solar panel cleaning',
        description: 'Specialist cleaning to help maintain panel efficiency and warranties.',
        icon: 'tabler:sun',
      },
      {
        title: 'Commercial sites',
        description: 'Shops, offices, schools and managed sites with flexible scheduling and RAMS on request.',
        icon: 'tabler:building-store',
      },
    ]}
  />

  <!-- Individual Service Sections for Anchor Links -->
  <div id="gutters" class="pt-16"></div>
  <div id="conservatory" class="pt-16"></div>
  <div id="solar" class="pt-16"></div>
  <div id="commercial" class="pt-16"></div>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[{ variant: 'primary', text: 'Get a free quote', href: '/contact' }]}
    title="Need multiple services?"
    subtitle="Ask for a combined quote and save on the day."
  />
</Layout>
