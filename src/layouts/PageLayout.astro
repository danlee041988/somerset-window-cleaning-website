---
import Layout from '~/layouts/Layout.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';
import Announcement from '~/components/widgets/Announcement.astro';
import StickyMobileCTA from '~/components/widgets/StickyMobileCTA.astro';

import { headerData, footerData } from '~/navigation';

import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
  structuredDataType?: 'homepage' | 'services' | 'about' | 'contact' | 'areas';
}

const { metadata, structuredDataType } = Astro.props;
---

<Layout metadata={metadata} structuredDataType={structuredDataType}>
  
  <slot name="header">
    <Header {...headerData} isSticky transition:name="header" />
  </slot>
  <main transition:name="main">
    <slot />
  </main>
  <slot name="footer">
    <Footer {...footerData} />
  </slot>
  
  <!-- Mobile-first sticky CTA bar -->
  <StickyMobileCTA />
</Layout>
