---
import '~/assets/styles/tailwind.css';
import criticalCSS from '~/styles/critical.css?raw';

import { I18N } from 'astrowind:config';

import CommonMeta from '~/components/common/CommonMeta.astro';
import Favicons from '~/components/Favicons.astro';
import CustomStyles from '~/components/CustomStyles.astro';
import ApplyColorMode from '~/components/common/ApplyColorMode.astro';
import Metadata from '~/components/common/Metadata.astro';
import SiteVerification from '~/components/common/SiteVerification.astro';
import Analytics from '~/components/common/Analytics.astro';
import BasicScripts from '~/components/common/BasicScripts.astro';
import AccessibilityEnhancements from '~/components/common/AccessibilityEnhancements.astro';
import MobileOptimisations from '~/components/common/MobileOptimisations.astro';
import TouchTargetOptimization from '~/components/common/TouchTargetOptimization.astro';
import ColorContrastOptimizer from '~/components/common/ColorContrastOptimizer.astro';
import AriaEnhancer from '~/components/common/AriaEnhancer.astro';
import EnhancedKeyboardNav from '~/components/common/EnhancedKeyboardNav.astro';
import AdvancedViewTransitions from '~/components/common/AdvancedViewTransitions.astro';
import LocalBusinessSchema from '~/components/seo/LocalBusinessSchema.astro';
import OrganizationSchema from '~/components/seo/OrganizationSchema.astro';
import OptimizedFonts from '~/components/common/OptimizedFonts.astro';

// Modern View Transitions using ClientRouter (Astro 5+)
import { ClientRouter } from 'astro:transitions';

import type { MetaData as MetaDataType } from '~/types';

export interface Props {
  metadata?: MetaDataType;
  structuredDataType?: 'homepage' | 'services' | 'about' | 'contact' | 'areas';
}

const { metadata = {}, structuredDataType = 'homepage' } = Astro.props;
const { language, textDirection } = I18N;
---

<!doctype html>
<html lang={language} dir={textDirection} class="2xl:text-[20px]">
  <head>
    <CommonMeta />
    <Favicons />
    <CustomStyles />
    <ApplyColorMode />
    <Metadata {...metadata} />
    <SiteVerification />
    <Analytics />
    <MobileOptimisations />
    
    <!-- Critical CSS for faster initial render -->
    <style set:html={criticalCSS}></style>
    
    <!-- Skip link styles -->
    <style>
      .skip-link {
        position: absolute;
        left: -9999px;
        top: 0.5rem;
        z-index: 999;
        padding: 0.75rem 1.5rem;
        background-color: #dc2626;
        color: white;
        text-decoration: none;
        font-weight: 600;
        border-radius: 0 0.5rem 0.5rem 0;
        transition: left 0.2s ease;
      }
      
      .skip-link:focus {
        left: 0;
        outline: 3px solid #3b82f6;
        outline-offset: 2px;
      }
      
      .skip-link:hover {
        background-color: #b91c1c;
      }
    </style>

    <!-- Performance: Preload primary hero image to improve LCP -->
    <!-- Disabled for now as it causes 404 errors -->
    <!-- <link rel="preload" as="image" imagesrcset="/src/assets/images/optimized/hero-main-lg.webp 1280w, /src/assets/images/optimized/hero-main-md.webp 1024w, /src/assets/images/optimized/hero-main-sm.webp 768w" imagesizes="(max-width: 768px) 100vw, 1280px" href="/src/assets/images/optimized/hero-main-lg.webp" /> -->

    <!-- Optimized self-hosted fonts for better performance -->
    <OptimizedFonts />

    <!-- Modern View Transitions with enhanced performance -->
    <ClientRouter />
    
    <!-- Enhanced Local Business Schema -->
    <LocalBusinessSchema type={structuredDataType} />
    
    <!-- Organization Schema for brand presence -->
    <OrganizationSchema showFullSchema={structuredDataType === 'homepage'} />
  </head>

  <body class="antialiased text-default bg-page tracking-tight">
    <!-- Skip to main content link for keyboard navigation -->
    <a href="#main-content" class="skip-link">
      Skip to main content
    </a>
    
    <!-- Temporarily disabled to fix transition errors -->
    <!-- <AdvancedViewTransitions /> -->
    <AccessibilityEnhancements />
    <TouchTargetOptimization />
    <ColorContrastOptimizer />
    <AriaEnhancer />
    <EnhancedKeyboardNav />
    <slot />

    <BasicScripts />
    
    <!-- Temporary fixes for development -->
    <script src="/unregister-sw.js" is:inline></script>
    <script src="/error-fix.js" is:inline></script>
    <script src="/jsonld-fix.js" is:inline></script>
  </body>
</html>
