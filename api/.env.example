# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@hostname:port/database_name"

# JWT Authentication
JWT_SECRET="your_secure_jwt_secret_key_here_minimum_32_characters"
JWT_REFRESH_SECRET="your_secure_refresh_secret_key_here_minimum_32_characters"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# EmailJS Configuration (for contact forms)
EMAILJS_SERVICE_ID="your_emailjs_service_id"
EMAILJS_TEMPLATE_ID="your_emailjs_template_id"
EMAILJS_PUBLIC_KEY="your_emailjs_public_key"
EMAILJS_PRIVATE_KEY="your_emailjs_private_key"

# Application Configuration
NODE_ENV="production"
FRONTEND_URL="https://your-frontend-domain.com"
BCRYPT_ROUNDS="12"
SESSION_EXPIRES_HOURS="24"

# Security Configuration
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Optional: reCAPTCHA (if implementing)
# RECAPTCHA_SECRET_KEY="your_recaptcha_secret_key"